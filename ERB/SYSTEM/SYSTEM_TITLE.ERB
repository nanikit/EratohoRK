@SYSTEM_TITLE
LOADGLOBAL
CALLF ANIME_CONFIG("SET", GLOBAL)
SAVEGLOBAL
LOADGLOBAL

REDRAW 0
CLEARLINE 1
RESULT  = 1
LOCAL:2 = LINECOUNT

DO
	FOR LOCAL:1, 0, 126
		CLEARLINE LINECOUNT - LOCAL:2
		FOR LOCAL:0, 0, 41
			HTML_PRINT "<p align='center'><img src='rev" + TOSTR(LOCAL:1, "000") + TOSTR(LOCAL:0, "00") + "'></p>"
		NEXT
		$START
		ALIGNMENT CENTER
		CUSTOMDRAWLINE ━
		;DRAWLINE
		CALL HTMLPRINTL(@"%HTMLFONT(@"<b>%HTMLSTYLE(@"%GAMEBASE_TITLE%", 2)%</b>", "Courier New", )%")
		{
		CALL HTMLPRINTL(@"%HTMLFONT(@"<b>ver{GAMEBASE_VERSION / 1000}.{GAMEBASE_VERSION % 1000 / 100}." + 
		@"{GAMEBASE_VERSION % 100 / 10}{GAMEBASE_VERSION % 10 / 1}</b>", "Courier New")%")
		}
		CALL HTMLPRINTL(@"%HTMLFONT(@"<b>%HTMLSTYLE(@"%GAMEBASE_AUTHOR%", 2)%</b>", "Courier New")%")
		CALL HTMLPRINTL(@"%HTMLFONT(@"<b>(%GAMEBASE_YEAR%)</b>", "Courier New")%")
		PRINTL
		PRINTFORML %GAMEBASE_INFO%
		CUSTOMDRAWLINE ━
		CALL HTMLPRINTL(@"%HTMLBUTTON("[0]  NEW GAME", "0", "새롭게 시작한다")%")
		CALL HTMLPRINTL(@"%HTMLBUTTON(" [1] LOAD GAME", "1", "데이터를 로드합니다")%")
		CALL HTMLPRINTL(@"%HTMLBUTTON(" [2]     INFO     ", "2", "갱신 내용을 표시합니다")%")
		;CALL HTMLPRINTL(@"%HTMLBUTTON(" [3]   CREDIT   ", "3", "크레디트를 표시합니다")%")
		ALIGNMENT LEFT
		CALL INPUTINT(0, 1, 2)
		CUSTOMDRAWLINE ━
		SELECTCASE RESULT
			CASE 0
				RESETDATA
				ADDCHARA 0
				BEGIN FIRST
			CASE 1
				CALL TITLE_LOADGAME
				BEGIN TITLE
			CASE 2
				CALL TITLE_INFO
				BEGIN TITLE
			;CASE 3
			;	CALL CREDIT_TITLE
		ENDSELECT
		GOTO START
	NEXT
LOOP RESULT
REDRAW 1
