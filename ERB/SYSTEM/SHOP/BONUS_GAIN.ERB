;─
;보너스 취득의 메뉴. 보너스의 종류와 필요 포인트는 가짜의 설정입니다
;─
@BONUS_GAIN
#DIM DAYONCE = -1

#DIM LINE_WIDTH
#DIM ITEM_LIST, 4, 10
#DIM ITEM_SIZE, 4
#DIM TALENT_LIST, 8, 15
#DIM TALENT_SIZE, 8
#DIM CONST TALENT_TBL = 52, 55, 57, 58, 59, 64, 66, 83, 91, 108, 109, 121, 130, 135, 140

VARSET LOCAL
VARSET ITEM_LIST
VARSET ITEM_SIZE
VARSET TALENT_LIST
VARSET TALENT_SIZE

DRAWLINE
PRINTFORML %CALLNAME:MASTER%를%CALLNAME:TARGET%가 조교중
SIF ASSI:1 >= 0
	PRINTFORML   (조수 1:%CALLNAME:(ASSI:1)%)　\@ ASSI:2 >= 0 ? (조수 2:%CALLNAME:(ASSI:2)%) # \@
PRINTFORML [LV {CFLAG:TARGET:0}　EXP {CFLAG:TARGET:1}/{CFLAG:TARGET:4}　NEXT {CFLAG:TARGET:4-CFLAG:TARGET:1}]
PRINTFORML (나머지 마력{CFLAG:마력})

;─
;이것까지 취득한 보너스의 표시
;처리가 거의 SQR인 채로, 표시 정보가 부족했으므로 처리 변경. 미조정@revkoishi(14/05/26)
LINE_WIDTH = WIDTH()

;추가 조교자
PRINTFORM \@ FLAG:추가조교자수 ? 추가된 조교자:{FLAG:11,2}인 \n # \@

;도구. 기본적인 처리는 스테이터스의 소질 분류표시와 같습니다
;닮은 처리인 것으로 좀 더 머리 사용하면 함수화할 수 있을 것 같은 생각도 들지만, 지금이라면 좀 더 영리한 방식이 있을지도
FOR LOCAL:0, 0, 50	;분류 루프
	SIF ITEM:(LOCAL:0)
		ITEM_LIST:ITEM_TYPE(LOCAL:0):(ITEM_SIZE:ITEM_TYPE(LOCAL:0)++) = LOCAL:0
NEXT
IF VARSIZE("ITEM_SIZE") - MATCH(ITEM_SIZE, 0)
	PRINTFORML -- □ 취득한 도구 □ \@ ITEM:커스텀도구 ? (성구 커스터마이즈제) %"-" * (LINE_WIDTH - 43)% # %"-" * (LINE_WIDTH - 22)% \@
	FOR LOCAL:0, 1, 4
		IF ITEM_SIZE:(LOCAL:0)	;그 만큼류의 도구가 없으면 날린다
			;도구 분류명을 표시
			PRINTFORM %ITEM_TYPENAME(LOCAL:0), 8, RIGHT%：
			LOCAL:2 = 10	;자리수 위치(↑표시 후의 위치)
			FOR LOCAL:1, 0, ITEM_SIZE:(LOCAL:0)	;그 만큼류의 도구 소지 몇분 루프
				;도구명을 취득([도구명] )
				LOCALS:0 = [%GET_ITEMNAME(ITEM_LIST:(LOCAL:0):(LOCAL:1))%]%" "%
				LOCAL:3 = STRLENS(LOCALS:0)	;↑의 문자수(도구명+[]+스페이스)
				LOCAL:2 += LOCAL:3			;자리수 위치 가산
				IF LOCAL:2 > LINE_WIDTH		;이대로 표시하면 도중 개행될 것 같은 경우는 개행 처리를 실시한다
					;개행 처리(되풀이해, 줄머리 인덴트, 자리수 위치 재계산)
					PRINTFORM \n          
					LOCAL:2 = 10 + LOCAL:3
				ENDIF
				;도구명의 표시
				IF GROUPMATCH(ITEM_LIST:(LOCAL:0):(LOCAL:1), 1, 11, 12, 13, 14) && ITEM:커스텀도구
					CALL PRINT_RAINBOW(LOCALS:0, , , RAND:12)
				ELSE
					PRINTS LOCALS:0
				ENDIF
			NEXT
			PRINTL 
		ENDIF
	NEXT
ENDIF

;소질의 표시. 위와 대개 같음… 이었던 것이지만 조금 먼가에 씌였다
FOR LOCAL:0, 0, VARSIZE("TALENT_TBL")
	SIF (TALENT:TARGET:(TALENT_TBL:(LOCAL:0)) ^^ CSVTALENT(NO:TARGET, TALENT_TBL:(LOCAL:0))) && TALENT_TYPE(TALENT_TBL:(LOCAL:0))
		TALENT_LIST:TALENT_TYPE(TALENT_TBL:(LOCAL:0)):(TALENT_SIZE:TALENT_TYPE(TALENT_TBL:(LOCAL:0))++) = TALENT_TBL:(LOCAL:0)
NEXT
IF VARSIZE("TALENT_SIZE") - MATCH(TALENT_SIZE, 0)
	LOCAL:4 = GETCOLOR()	;현재의 표시색을 보유
{
	CALL HTMLPRINTL("-- □ 변동한 소질 □ (범례:" + HTMLFONT("[<I> 취득 소질 </I>] ", , 0x60FFFF) + 
                    HTMLFONT("[<I> 소거 소질 </I>]", , 0x606060) + @") %"-" * (LINE_WIDTH - 56)%")
}
	IF FLAG:소질표시방법	;소질 분류표시. 여기서 하는 의미가 있는지 어떤지… 우선 유저 프렌들리 중점(수수께끼)
		FOR LOCAL:0, 1, 8
			IF TALENT_SIZE:(LOCAL:0)
				PRINTFORM %TALENT_TYPENAME(LOCAL:0), 8, RIGHT%：
				LOCAL:2 = 10
				FOR LOCAL:1, 0, TALENT_SIZE:(LOCAL:0)
					LOCALS:0 = [%GET_TALENTNAME(TARGET, TALENT_LIST:(LOCAL:0):(LOCAL:1))%]%" "%
					LOCAL:3 = STRLENS(LOCALS:0)
					LOCAL:2 += LOCAL:3
					IF LOCAL:2 > LINE_WIDTH
						PRINTFORM \n          
						LOCAL:2 = 10 + LOCAL:3
					ENDIF
					SETCOLOR TALENT:TARGET:(TALENT_LIST:(LOCAL:0):(LOCAL:1)) ? 0x60FFFF # 0x606060
					PRINTS LOCALS:0
					SETCOLOR LOCAL:4
				NEXT
				PRINTL 
			ENDIF
		NEXT
	ELSE					;소질 번호순서 표시
		LOCAL:2 = 0
		FOR LOCAL:0, 0, VARSIZE("TALENT_TBL")
			IF (TALENT:TARGET:(TALENT_TBL:(LOCAL:0)) ^^ CSVTALENT(NO:TARGET, TALENT_TBL:(LOCAL:0))) && TALENT_TYPE(TALENT_TBL:(LOCAL:0))
				LOCALS:0 = [%GET_TALENTNAME(TARGET, TALENT_TBL:(LOCAL:0))%]%" "%
				LOCAL:3 = STRLENS(LOCALS:0)
				LOCAL:2 += LOCAL:3
				IF LOCAL:2 > LINE_WIDTH
					PRINTL 
					LOCAL:2 = LOCAL:3
				ENDIF
				SETCOLOR TALENT:TARGET:(TALENT_TBL:(LOCAL:0)) ? 0x60FFFF # 0x606060
				PRINTS LOCALS:0
				SETCOLOR LOCAL:4
			ENDIF
		NEXT
		PRINTL 
	ENDIF
ENDIF

;─
;보너스 메뉴의 표시
;이름의 여백분
LOCAL = MAX(8 - STRLENSU(CALLNAME:TARGET), 0)
DRAWLINE

;하루 1회만 표시
IF DAYONCE != DAY
	;이벤트 구상:마력 사용전
	CALL KOJO_EVENT(110, 0)
	CALL VOIDLINE_IF(RESULT)
	DAYONCE = DAY
ENDIF

PRINTFORML %CALLNAME:TARGET%는,%CALLNAME:MASTER%로부터 정제 한 마력을 사용해…
PRINTL [ 0] 이제 되었다
;소환은 주인님 한정
SIF TALENT:주인님
	PRINTFORML [ 1] 새로운 조교자를 소환한다　　　　　　　　　　　　 마력 1000
SELECTCASE ABL:기교
	CASE 0
		PRINTFORML [ 2] 조교 기교의 재능을 개화시킨다　　　　　　　　　　 마력{RIZE_ABL_V(0), 4}
	CASE IS >= 99
		PRINTFORML [--] 조교 기교는 벌써 최고다
	CASEELSE
		PRINTFORML [ 2] 조교 기교를 높인다　　　　　　　　　　　　　　　 마력{RIZE_ABL_V(0), 4} 요점 LV{RIZE_ABL_V(1)}
	;시험적으로 마력에서 살 수 있는 기교 상한을 없애 본다
	;세상 마력이야
	;PRINTFORML [--] 조교 기교는 실천으로 높일 수 밖에 없을 것이다
ENDSELECT
PRINTL [ 3] 지식을 습득한다
PRINTL [ 4] 기능을 취득한다
IF FLAG:모드 != 1 || FLAG:디버그 || !(FLAG:AI자유도&1)
	PRINTL [ 5] 외계의 성구를 연성 한다
	PRINTL [ 6] 고문도구를 연성 한다
ENDIF
PRINTFORML \@ ITEM:9 ? [--] 도구는 이미 커스터마이즈 되고 있다# [10] 도구를 커스터마이즈 한다　　　　　　　　　　　　 마력 3000  요점[%TALENTNAME:59%] \@
SIF !TALENT:남자
	PRINTFORML [11] \@ TALENT:후타나리 ? 양성화를 원래대로 되돌린다   # 양성화의 의식을 한다\@　　　　　　　　　　　　　　 마력 7000
SIF !TALENT:남자
	PRINTFORML \@ TALENT:거유 ? [12] 더 이상 가슴은 크게 할 수 없다# [12] 풍부한 가슴의 의식을 한다　　　　　 \@　　　　　　　　　　 마력 5000
SIF !TALENT:남자
	PRINTFORML \@ TALENT:빈유 ? [13] 더 이상 가슴은 작게 할 수 없다# [13] 축흉의 의식을 한다　　　　　 \@　　　　　　　　　　 마력 1000
SIF TALENT:MASTER:남자 || TALENT:MASTER:후타나리
	PRINTFORML \@ MAXBASE:MASTER:사정 < 2500 + CFLAG:MASTER:정력한계 * 500 ? [--] 노예의 정력은 단련하면 아직 늘릴 수 있을 것 같다# [16] 노예의 정력의 한계를 올린다　　　　　　　　　　　 마력{(MAXBASE:MASTER:사정 - 2500 - CFLAG:MASTER:정력한계 * 500) / 500 * 1000 + 1000} \@
DRAWLINE

;─
;입력 처리
$INPUT_LOOP
INPUT
SELECTCASE RESULT
	CASE 0
		RETURN 0
	CASE 1
		SIF !TALENT:주인님
			GOTO FAILED
		IF CFLAG:마력 < 1000
			$FAILED_BY_MP
			CLEARLINE 1
			REUSELASTLINE 마력이 부족한 것 같다…
			GOTO INPUT_LOOP
		ENDIF
		CALL NEW_TRAINER
		SIF RESULT
			RETURN 0
	CASE 2
		;기교 상승에 도전
		CALL RIZE_ABL
		LOCAL = RESULT:1
		SELECTCASE RESULT
			;성공시
			CASE 0
				CALL PRINT_DIALOG(@"%CALLNAME:TARGET%의 조교 기교를<{ABL:기교+1}>에 올려도 좋습니까?",1,1,1)
				CALL PRINT_CHOICE(,"네",1,"아니오",2,)
				IF RESULT == 1
					;마력을 소비
					CFLAG:마력 -= LOCAL
					;기교를 상승
					ABL:기교++
					;이벤트 구상:조교 기교 업
					CALL KOJO_EVENT(110, 1)
					CALL VOIDLINE_IF(RESULT)
					;지문 표시
					PRINTFORMW %CALLNAME:TARGET%의 조교 기교는<{ABL:기교}>가 되었습니다
				ENDIF
			;마력 부족시
			CASE 1
				REUSELASTLINE 마력이 부족한 것 같다…(마력{LOCAL}가 필요)
				GOTO INPUT_LOOP
			;조교 레벨 부족시
			CASE 2
				REUSELASTLINE 기교를 올리려면, 좀 더 경험을 쌓을 필요가 있을 것이다…(조교 LV{RIZE_ABL_V(1)}가 필요)
				GOTO INPUT_LOOP
			;기교 상한시
			CASE 3
				REUSELASTLINE 더 이상 기교는 올려지지 않다
				GOTO INPUT_LOOP
			;그 외의 문제
			CASEELSE
				$FAILED
				CLEARLINE 1
				GOTO INPUT_LOOP
		ENDSELECT
	CASE 3
		;이벤트 구상:지식을 얻기 전
		CALL KOJO_EVENT(110, 2)
		PRINTFORML %CALLNAME%는 마력을 사용해 새로운 지식을 얻기로 했다…
		PRINTL [ 0] - 그만둔다
		PRINTFORML \@ TALENT:약학지식   ? [--] [약학지식]을 가지고 있습니다           # [ 1] 약품의[약학지식]을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("약학지식"  , 0), 5} 요점 LV{GAIN_TALENT_V("약학지식"  , 1)} \@
		PRINTFORML \@ TALENT:매혹       ? [--] [매혹]을 가지고 있습니다               # [ 2] [매혹]능력의 체득　　　　　　　　　　　　　　　 마력{GAIN_TALENT_V("매혹"      , 0), 5} 요점 LV{GAIN_TALENT_V("매혹"      , 1)} \@
		PRINTFORML \@ TALENT:금단의지식 ? [--] [금단의지식]을 가지고 있습니다         # [ 3] [금단의지식]에 손을 댄다　　　　　　　　　　　 마력{GAIN_TALENT_V("금단의지식", 0), 5} 요점 LV{GAIN_TALENT_V("금단의지식", 1)} \@
		PRINTFORML \@ TALENT:도구사용   ? [--] [도구사용]을 가지고 있습니다           # [ 4] [도구사용]의 지식을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("도구사용"  , 0), 5} 요점 LV{GAIN_TALENT_V("도구사용"  , 1)} \@
		PRINTFORML \@ TALENT:촬영기술   ? [--] [촬영기술]을 가지고 있습니다           # [ 5] 사진의[촬영기술]을 습득　　　　　　　　　　　　 마력{GAIN_TALENT_V("촬영기술"  , 0), 5} 요점 LV{GAIN_TALENT_V("촬영기술"  , 1)} \@
		$INPUT_LOOP_SKILL
		INPUT
		SELECTCASE RESULT
			CASE 0
				RESTART
			CASE 1 TO 5
				IF 0
				ELSEIF RESULT == 1
					LOCALS:0 = 약학지식
					LOCALS:1 = 약을 올바르게 취급하려면, 좀 더 경험을 쌓을 필요가 있을 것이다…
					LOCAL = 3
				ELSEIF RESULT == 2
					LOCALS:0 = 매혹
					LOCALS:1 = 매혹의 능력을 얻으려면, 좀 더 경험을 쌓을 필요가 있을 것이다…
					LOCAL = 4
				ELSEIF RESULT == 3
					LOCALS:0 = 금단의지식
					LOCALS:1 = 금단의지식을 끈 풀려면, 좀 더 경험을 쌓을 필요가 있을 것이다…
					LOCAL = 5
				ELSEIF RESULT == 4
					LOCALS:0 = 도구사용
					LOCALS:1 = 외계의 성구를 능숙하게 사용하려면, 아직 경험이 부족한 것 같다…
					LOCAL = 6
				ELSEIF RESULT == 5
					LOCALS:0 = 촬영기술
					LOCALS:1 = 카메라를 능숙하게 사용하려면, 좀 더 경험을 쌓을 필요가 있을 것이다…
					LOCAL = 37
				ENDIF
				IF TALENT:LOCALS
					CLEARLINE 1
					GOTO INPUT_LOOP_SKILL
				ENDIF
				;기능 취득에 도전
				CALL GAIN_TALENT(LOCALS)
				LOCAL:1 = RESULT:1
				SELECTCASE RESULT
					;성공시
					CASE 0
						CALL PRINT_DIALOG(@"%CALLNAME:TARGET%가 소질[%LOCALS%]를 취득합니다. 좋습니까?",1,1,1)
						CALL PRINT_CHOICE(,"네",1,"아니오",2,)
						IF RESULT == 1
							;마력을 소비
							CFLAG:마력 -= LOCAL:1
							;기능을 취득
							TALENT:LOCALS ^= 1
							;이벤트 구상:지식 취득
							CALL KOJO_EVENT(110, LOCAL)
							CALL VOIDLINE_IF(RESULT)
							;지문 표시
							PRINTFORMW %CALLNAME%는[%LOCALS%]를 취득했습니다
						ENDIF
					;마력 부족시
					CASE 1
						CLEARLINE 1
						REUSELASTLINE 마력이 부족한 것 같다…(마력{LOCAL:1}가 필요)
						GOTO INPUT_LOOP_SKILL
					;조교 레벨 부족시
					CASE 2
						CLEARLINE 1
						REUSELASTLINE %LOCALS:1%(조교 LV{GAIN_TALENT_V(LOCALS, 1)}가 필요)
						GOTO INPUT_LOOP_SKILL
					;그 외의 문제
					CASEELSE
						CLEARLINE 1
						GOTO INPUT_LOOP_SKILL
				ENDSELECT
			CASEELSE
				CLEARLINE 1
				GOTO INPUT_LOOP_SKILL
		ENDSELECT
	CASE 4
		;이벤트 구상:기술을 얻기 전
		CALL KOJO_EVENT(110, 7)
		PRINTFORML %CALLNAME%는 마력을 사용해 새로운 기술을 얻기로 했다…
		PRINTL [ 0] - 그만둔다
		PRINTFORML \@ TALENT:혀사용          ? %"[--] [혀사용]을 가지고 있습니다"    , 51, LEFT% # %"[ 1] [혀사용]을 특히 교묘하게"      , 51, LEFT   % 마력{GAIN_TALENT_V("혀사용"        , 0), 5} 요점 LV{GAIN_TALENT_V("혀사용"        , 1)} \@
		PRINTFORML \@ TALENT:기묘한손가락      ? %"[--] [기묘한손가락]를 가지고 있습니다", 51, LEFT% # %"[ 2] [기묘한손가락]를 체득"        , 51, LEFT   % 마력{GAIN_TALENT_V("기묘한손가락"    , 0), 5} 요점 LV{GAIN_TALENT_V("기묘한손가락"    , 1)} \@
		PRINTFORML \@ TALENT:허리사용          ? %"[--] [허리사용]을 가지고 있습니다    ", 51, LEFT% # %"[ 3] [허리사용]을 보다 싫은 것 같고"    , 51, LEFT   % 마력{GAIN_TALENT_V("허리사용"        , 0), 5} 요점 LV{GAIN_TALENT_V("허리사용"        , 1)} \@
		PRINTFORML \@ TALENT:결박능숙        ? %"[--] [결박능숙]을 가지고 있습니다"  , 51, LEFT% # %"[ 4] [결박능숙]에 손을 댄다"    , 51, LEFT   % 마력{GAIN_TALENT_V("결박능숙"      , 0), 5} 요점 LV{GAIN_TALENT_V("결박능숙"      , 1)} \@
		PRINTFORML \@ TALENT:새디즘            ? %"[ 5] [새디즘]의 길로부터 손을 뗀다"    , 51, LEFT% # %"[ 5] [새디즘]의 기쁨을 안다"        , 51, LEFT% \@ 마력{GAIN_TALENT_V("새디즘"          , 0), 5} 요점 LV{GAIN_TALENT_V("새디즘"          , 1)}
		PRINTFORML \@ TALENT:착의플레이선호  ? %"[ 6] [착의플레이선호]를 그만둔다"  , 51, LEFT% # %"[ 6] [착의플레이선호]에 눈을 뜬다", 51, LEFT% \@ 마력{GAIN_TALENT_V("착의플레이선호", 0), 5} 요점 LV{GAIN_TALENT_V("착의플레이선호", 1)}
		PRINTFORML \@ TALENT:불결무시        ? %"[--] [불결무시]를 가지고 있습니다"  , 51, LEFT% # %"[ 7] [불결무시]를 할 수 있도록(듯이)"  , 51, LEFT   % 마력{GAIN_TALENT_V("불결무시"      , 0), 5} 요점 LV{GAIN_TALENT_V("불결무시"      , 1)} \@
		$INPUT_LOOP_SKILL2
		INPUT
		SELECTCASE RESULT
			CASE 0
				RESTART
			CASE 1 TO 7
				IF 0
				ELSEIF RESULT == 1
					LOCALS:0 = 혀사용
					LOCALS:1 = 인간세상 밖의 혀사용에 이르려면, 아직 경험이 부족한 것 같다…
					LOCAL = 8
