	{
		CALL FPRINTL(@"%UNICODE(GETBIT(FLAG:AI자유도, LOCAL:0) ? 0x2611 # 0x2610)% [{LOCAL:0 + 1, 2}] %TEXT:(LOCAL:0)%", 
                     GETBIT(FLAG:AI자유도, LOCAL:0) ? 0x70C070 # 0x969696)
	}
	NEXT
	PRINTFORML    [ 8] 모두 ON\n   [ 9] 모두 OFF
	DO
		INPUT
		LOCAL:0 = !GROUPMATCH(RESULT, 0, 1, 2, 3, 4, 8, 9)
		IF LOCAL:0
