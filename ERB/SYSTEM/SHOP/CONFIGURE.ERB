@CONFIGURE
#DIMS CONST CONF_FUNC = "ANIMATION_EFFECT", "AI_FREEDOM", "PAD"
#DIM LINE
#DIM KOJO_CONF, 21
LOCAL:1 = RESULT
LOCAL:2 = CURRENTREDRAW()
LINE = LINECOUNT
;구상의 콘피그 설정을 참조
VARSET RESULT, -1
TRYCALLFORM KOJO_SETUP_K{NO:TARGET}
ARRAYCOPY "RESULT", "KOJO_CONF"
REDRAW 0
DO
	CLEARLINE LINECOUNT - LINE
	PRINTL [ 0] 설정 종료
	SIF KOJO_CONF:0 > 0					;추천 설정이 있다
		PRINTL [ 1] 현재의 조교자 구상이 추천 하는 콘피그 설정으로 한다
	IF FLAG:디버그 || KOJO_CONF:1 > 0	;구상측이 독심술 온으로 하고 있는지, 디버그 모드이다
		PRINTFORM %"[ 2] 공기를 읽는 정도의 능력(DEBUG·구상 한정 기능)", 50, LEFT%
		PRINTFORML %SIGNS(TALENT:MASTER:독심술 - 1, "상대의 기분은 모른다", "다소 공기를 읽을 수 있다", "심을 간파할 수 있다"), 30, RIGHT%
	ENDIF
	PRINTFORML %"[ 3] 소질을 성격이나 체질 따위로 분류한다", 50, LEFT%%\@ FLAG:소질표시방법 ? 분류한다 # 등록번호순서 \@, 30, RIGHT%
	PRINTFORML %"[ 4] 일상생활의 묘사", 50, LEFT%%\@ FLAG:일상 ?ON # OFF \@, 30, RIGHT%
	PRINTFORML %"[ 5] 조교자의 임신 기능", 50, LEFT%%\@ FLAG:임신 ? ON # OFF \@, 30, RIGHT%
	PRINTFORM %"[ 6] 조교 대상의 임신 기능", 50, LEFT%
	PRINTFORML %SIGNS(FLAG:노예임신 - 1, "임신하지 않는다", "사랑이 있는 만큼 임신하기 쉽다", "사랑에 관계없이 임신한다"), 30, RIGHT%
	PRINTL [ 7] 시각 애니메이션 효과의 표시 설정
	IF FLAG:모드 == 1
		PRINTFORM %"[ 8] AI자유도 설정(SANDBOX만)", 50, LEFT%
		PRINTFORML %SIGNS(FLAG:AI자유도 ? FLAG:AI자유도 / 15 # -1, "OFF", "일부 ON", "ON"), 30, RIGHT%
	ENDIF
	PRINTFORML %"[ 9] 조교중의 인터페이스", 50, LEFT%%\@ FLAG:조교UI패드화 ? 패드 # 노멀 \@, 30, RIGHT%
	DO
		INPUT
		LOCAL:0 = !INRANGE(RESULT, 0, 9)								;범위 체크
		LOCAL:0 |= (RESULT == 1 && KOJO_CONF:0 <= 0)					;추천 설정이 없다
		LOCAL:0 |= (RESULT == 2 && (FLAG:디버그 !| KOJO_CONF:1 > 0))	;디버그 모드에서도 독심술 온도 아니다
		LOCAL:0 |= (RESULT == 8 && FLAG:모드 != 1)					;SANDBOX 모드가 아니다
		IF LOCAL:0
			CLEARLINE 1
			REUSELASTLINE 입력치가 범위외입니다
		ENDIF
	LOOP LOCAL:0
	LOCAL:0 = RESULT
	SELECTCASE LOCAL:0
		CASE 1
			CALL KOJO_CONFIG_SET(TARGET)
			IF ANIME_CONFIG("USER2")	;밤낮의 효과를 리로드
				SETBGCOLOR TIME ? 0x00001E # 0x140A00
			ELSE
				RESETBGCOLOR
			ENDIF
		CASE 2
			PRINTFORML 공기를 읽는 정도의 능력의 설정을 실시합니다 \n[ 0] 상대의 기분은 모르는 \n[ 1] 공기나 욕구를 읽을 수 있는 정도로 \n[ 2] 심을 읽을 수 있도록(듯이)
			CALL INPUT_RANGE(0, 2)
			TALENT:MASTER:독심술 = RESULT
		CASE 3
			PRINTFORMW 소질을\@ FLAG:소질표시방법 ? 등록 번호 표시에 되돌려# 성격이나 체질 따위, 종류 마다 정돈해 표시시키고\@
			FLAG:소질표시방법 ^= 1
		CASE 4
			FLAG:일상 ^= 1
		CASE 5
			FLAG:임신 ^= 1
		CASE 6
			PRINTFORML 조교 대상이 임신할까의 설정을 실시합니다 \n[ 0] 임신하지 않는 \n[ 1] 사랑이 있는 만큼 임신하기 쉬운 \n[ 2] 노예에게 사랑 따위 필요없다! 사랑에 관계없이 임신한다
			CALL INPUT_RANGE(0, 2)
			FLAG:노예임신 = RESULT
		CASE 7 TO 9
			CALLFORM CONFIG_%CONF_FUNC:(LOCAL:0 - 7)%
	ENDSELECT
LOOP LOCAL:0
REDRAW LOCAL:2
RETURN LOCAL:1


