@CHARAMAKE_K52(ARG)
;1%로 브론자
IF PERCENT(1)
	CALL CHARAMAKE_K52_2(ARG)
	RETURN 2
ENDIF
PRINTFORMW 「자, 일어나 주세요!」
PRINTL 
CALL CHARA_CUTIN(CSTR:10, CSTR:11, CSTR:로마자)
PRINTL 
PRINTFORML 「천인인 내가 와 준 것이니까, 빨리 대답하세요」
PRINTFORMW 「내일의 날씨는 무엇이 좋아?」
PRINTL 
PRINTFORMDL [0] 대답하지 않는다
PRINTFORMDL [1] 맑음
PRINTFORMDL [2] 흐림
PRINTFORMDL [3] 비
PRINTFORMDL [4] 휴일이 되기 때문에 태풍
CALL INPUTINTD(0, 1, 2, 3, 4)
SELECTCASE RESULT
	CASE 0
		PRINTFORML 「어떻게든 말하세요」
		CALLF CM_PROF("충동", -10)
		CALLF CM_PROF("호기심", -10)
		CALLF CM_PROF("수치", 10)
		CALLF CM_PROF("신경질", 10)
	CASE 1
		PRINTFORML 「개이고라는 기분 좋네요. 조금 숨막힐 듯이 덥지만」
		CALLF CM_PROF("솔직함",   20)
		CALLF CM_PROF("낙관",     10)
		CALLF CM_PROF("수치",     -20)
		CALLF CM_PROF("호기심",   10)
	CASE 2
		PRINTFORML 「보내기 쉬운 날씨군요. 그렇지만, 그것을 선택한다고, 피곤한 거야?」
		CALLF CM_PROF("피학",     10)
		CALLF CM_PROF("신경질",   20)
		CALLF CM_PROF("모랄",   10)
		CALLF CM_PROF("공격",     -10)
	CASE 3
		PRINTFORML 「한달에 1회 정도는, 빗소리를 들으면서 독서라는 것도 나쁘지 않네요」
		CALLF CM_PROF("지성",     10)
		CALLF CM_PROF("결벽",     10)
		CALLF CM_PROF("공격",     -20)
		CALLF CM_PROF("충동",     -10)
	CASE 4
		PRINTFORML 「너 말야─. 『대체』는 알고 있어?」
		CALLF CM_PROF("충동",     30)
		CALLF CM_PROF("솔직함",   30)
		CALLF CM_PROF("지성",     -20)
		CALLF CM_PROF("모랄",   -20)
ENDSELECT
PRINTFORMW 「그러면, 잘 자요」
RETURN 1
