;レミリア＠紅レミの人
@CHARAMAKE_K10(ARG)
SELECTCASE ARG
	CASE 0
		PRINTFORMW 「早速だけど、質問に答えてもらうわよ」
	CASE 9
		PRINTFORMW 「最後のシメは私よ。喜びなさい」
	CASEELSE
		PRINTFORMW 「じゃあ次は私の質問に答えてもらおうかな」
ENDSELECT
PRINTL 
CALL CHARA_CUTIN(CSTR:10, CSTR:11, CSTR:ローマ字)
PRINTL 
PRINTFORML 「この世で最も強い力って何だと思う？」
PRINTFORMW 「面白い答えを期待してるわよ」
PRINTL 
PRINTFORMDL [0] 答えない
PRINTFORMDL [1] 権力
PRINTFORMDL [2] 暴力
PRINTFORMDL [3] 財力
PRINTFORMDL [4] 愛情
CALL INPUTINTD(0, 1, 2, 3, 4)
SELECTCASE RESULT
	CASE 0
		PRINTFORML 「答えない……か。禅問答の真似事かしら」
		PRINTFORMW 「なかなか良い答えだとは思うけれど、いかんせん地味すぎる！」
		CALLF CM_PROF("衝動", -10)
		CALLF CM_PROF("好奇心", -10)
		CALLF CM_PROF("羞恥", 10)
		CALLF CM_PROF("神経質", 10)
	CASE 1
		PRINTFORML 「強いって、何かを従えるってことなのかもねぇ」
		PRINTFORMW 「いいわ。それじゃあまた会う時まで――」
		CALLF CM_PROF("攻撃", 10)
		CALLF CM_PROF("プライド", 20)
		CALLF CM_PROF("衝動", 10)
		CALLF CM_PROF("好奇心", 10)
		CALLF CM_PROF("知性", 10)
	CASE 2
		PRINTFORML 「やっぱり力といえばこれね。わかりやすくっていいわ」
		PRINTFORMW 「私もこれには自信があるのよ」
		CALLF CM_PROF("攻撃", 30)
		CALLF CM_PROF("被虐", -10)
		CALLF CM_PROF("素直さ", 10)
		CALLF CM_PROF("衝動", 20)
		CALLF CM_PROF("Ｖ好き", 10)
	CASE 3
		PRINTFORML 「幻想郷でも目立たないながら、歴然とした力を持ってるのよね」
		PRINTFORMW 「最も強いかどうかは別として」
		CALLF CM_PROF("攻撃", -10)
		CALLF CM_PROF("知性", 10)
		CALLF CM_PROF("モラル", 10)
		CALLF CM_PROF("神経質", 10)
	CASE 4
		PRINTFORML 「……なるほど。普通そういう事を言う奴は舌先三寸なんだけど」
		PRINTFORMW 「もしかして、あなたがそれを証明してくれるのかしら」
		CALLF CM_PROF("攻撃", -10)
		CALLF CM_PROF("素直さ", 10)
		CALLF CM_PROF("羞恥", -10)
		CALLF CM_PROF("Ｃ好き", 20)
		CALLF CM_PROF("Ｖ好き", 10)
		CALLF CM_PROF("Ａ好き", 10)
		CALLF CM_PROF("Ｂ好き", 10)
ENDSELECT
RETURN 1
