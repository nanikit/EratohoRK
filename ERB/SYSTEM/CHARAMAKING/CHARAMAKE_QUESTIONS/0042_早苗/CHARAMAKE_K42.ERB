;早苗＠早苗様の人
@CHARAMAKE_K42(ARG)
PRINTFORMW 「すみません、少しお聞きしたいのですけど、いいですか？」
PRINTL 
CALL CHARA_CUTIN(CSTR:10, CSTR:11, CSTR:ローマ字)
PRINTL 
PRINTFORMW 「神様って、たくさん居ると思います？」
PRINTL 
PRINTFORMDL [0] 答えない
PRINTFORMDL [1] 居る
PRINTFORMDL [2] 神は一人しか居ない
PRINTFORMDL [3] 神など存在しない
PRINTFORMDL [4] 私が神だ
CALL INPUTINTD(0, 1, 2, 3, 4)
SELECTCASE RESULT
	CASE 0
		PRINTFORML 「シカトですか？　祟られても知らないわよ！」
		;無回答の補正値は固定
		CALLF CM_PROF("衝動", -10)
		CALLF CM_PROF("好奇心", -10)
		CALLF CM_PROF("羞恥", 10)
		CALLF CM_PROF("神経質", 10)
	CASE 1
		PRINTFORML 「そうですよね、やっぱり神様はたくさん居るのが賑やかでいいですよねー」
		PRINTFORML 「守矢神社は３人も神様が居るんですよ、是非参拝しにきてくださいね」
		CALLF CM_PROF("好奇心", 10)
		CALLF CM_PROF("楽観", 10)
		CALLF CM_PROF("潔癖", -10)
		CALLF CM_PROF("神経質", -10)
	CASE 2
		PRINTFORML 「はあそうですか、今の所一神教はメジャーですもんね」
		PRINTFORML 「私達も見習ってもっと信者を増やさないといけないですね」
		CALLF CM_PROF("モラル", 10)
		CALLF CM_PROF("羞恥", 10)
		CALLF CM_PROF("潔癖", 10)
		CALLF CM_PROF("神経質", 10)
	CASE 3
		PRINTFORML 「人間の力をずいぶんと高く評価してるのね」
		PRINTFORML 「それとも科学っていう神様を知らずに信仰してるだけかしら」
		CALLF CM_PROF("プライド", 10)
		CALLF CM_PROF("衝動", 10)
		CALLF CM_PROF("楽観", 10)
		CALLF CM_PROF("攻撃", 10)
	CASE 4
		PRINTFORML 「あ、神様でしたか、すみません分からなくて」
		PRINTFORML 「最近雑多な神様が増えてきたなぁ」
		CALLF CM_PROF("好奇心", 20)
		CALLF CM_PROF("Ｃ好き", 30)
		CALLF CM_PROF("Ｖ好き", 30)
		CALLF CM_PROF("プライド", 30)
		
ENDSELECT
PRINTFORMW 「それじゃ、私は神事がありますのでこれで」
RETURN 1
