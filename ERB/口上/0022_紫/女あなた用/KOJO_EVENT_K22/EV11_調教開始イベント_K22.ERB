;━━━━━━━━━━━━━━━━━━━━━━━━
;目覚め（好意500以上）
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && AFFECTION("目覚め")
ENDIF

;-------------------------------------------------
;・丁寧に調教を進められて、思ったより嫌じゃないかも…
;━━━━━━━━━━━━━━━━━━━━━━━━
;順応（好意100以上・好感度100以上）
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && AFFECTION("順応")
ENDIF
