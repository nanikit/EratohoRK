		PRINTW 
		
		CALL FADEIN(20, "　　――私を、止めてみる？")
		WAIT
	CASEELSE	;上記以外(普通のパターン)
		;ネタバレ：
		;こいしちゃんの誕生日は毎月あります。しかもこいしちゃんが勝手に決めた日(だいたい月初め)
		;ようはお祭りしたいだけ。適当に人間の真似をしている。妖怪のすることなんてそんなもんだ(適当発言)
		;どこかで聞いたようなシチュだが、さとりさまにデスノボリは一切無い。ごあんしんください
		;「残念だったわね」
		PRINTL 
		CALL FADEIN(8, "　　「ねぇ、お姉ちゃん」")
		WAIT
		
		PRINTL 
		ALIGNMENT RIGHT
		CALL FADE(8, GETBGCOLOR(), LOCAL:0, "「なに？ こいし」　　")
		ALIGNMENT LEFT
		WAIT
		
		PRINTL 
		CALL FADEIN(8, "　　「明日は何の日か知ってる？」")
		WAIT
		
		PRINTL 
		ALIGNMENT RIGHT
		CALL FADE(8, GETBGCOLOR(), LOCAL:0, "「…幻想郷で一番可愛い女の子の誕生日」　　")
		ALIGNMENT LEFT
		WAIT
		
		PRINTL 
		CALL FADEIN(8, @"　　「うふふ。私ね、お誕生日プレゼントは %K64_CNAME(MASTER, 2)% がいいと思うわ♪」")
		WAIT
ENDSELECT
