		CALL FPRINTW("「あぁ、お帰りなさい。ごはん食べる？」　　", LOCAL:0, "RIGHT")
		PRINTL 
		PRINTW 　　「ん、お寺で食べてきたからいいよ」
		
		PRINTL 
		PRINTL 
		PRINTW 　　「…ねぇお姉ちゃん、ごはんの前で何をそんなに悩んでるの？ …ひょっとしてダイエット中？ ｸｽｸｽ」
		PRINTL 
		CALL FPRINTL("「違うわよ」　　", LOCAL:0, "RIGHT")
		CALL FPRINTW("「今頃になって是非曲直庁がね…」　　", LOCAL:0, "RIGHT")
		
		PRINTL 
