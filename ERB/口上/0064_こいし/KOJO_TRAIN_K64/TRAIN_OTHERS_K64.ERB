;────────────────────────────────────
;EV21, 大満足口上
;────────────────────────────────────
;・調教者の大満足ボーナスを取得した場合に表示
;-------------------------------------------------
;=================================================
@KOJO_EVENT_K64_21(ARG)
;=================================================
;━━━━━━━━━━━━━━━━━━━━━━━━━
;こいしさま大満足
;━━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック()
	;=================================================
	;愛想よく応答する
	;=================================================
	IF 口上記入チェック(0) && IS_NOWCOMNAME("愛想よく応答する")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;快感を受け入れる/気持ち良い！
	;=================================================
	IF 口上記入チェック(0) && IS_NOWCOMNAME("快感を受け入れる/気持ち良い！")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;中に出して！
	;=================================================
	IF 口上記入チェック(0) && IS_NOWCOMNAME("中に出して！")
		;分岐が必要だわ…とりあえず後で
		;どっちに出して欲しいのか、射精したのか、量はどうなのか
		CALL HTMLPRINTW(@"「ふぅ…%K64_SYMBOL("BHeartW")%」")
		PRINTFORMW 「%K64_CNAME()%のおまんこ、すっごく気持ちよかったよ♪」
		RETURN 1
	ENDIF
	
	;=================================================
	;悲鳴を上げる
	;=================================================
	IF 口上記入チェック() && IS_NOWCOMNAME("悲鳴を上げる")
		PRINTFORMW 「いまの鳴き声、すっごくよかったわ」
		PRINTFORMW 「私、コーフンしちゃった♪」
		RETURN 1
	ENDIF
	
	;=================================================
	;愛情を込めてやる
	;=================================================
	IF 口上記入チェック() && IS_NOWCOMNAME("愛情を込めてやる")
		CALL HTMLPRINTW(@"「わーい♪ かいかーん%K64_SYMBOL("BHeartW")%」")
		RETURN 1
	ENDIF
	
	;SELECTCOM == 15は上層で処理
	;=================================================
	;REACT分類が積極的従う(積極的やる、なすがまま等)
	;=================================================
	IF 口上記入チェック(0) && IS_COMGRONAME("積極的従う/受け入れる")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;---------------------------------------------
	;その他を処理
	;---------------------------------------------
	SELECTCASE RANDEVENT(2, 0)
		CASE 0
			PRINTFORMW 「こりゃやみつきになっちゃうね」
		CASEELSE
			PRINTFORMW 「うん、いい感じね♪」
			PRINTFORMW 「うふふ、%K64_CNAME()%も私の喜ばせ方がわかってきたのかしら♪」
	ENDSELECT
	RETURN 1
ENDIF


