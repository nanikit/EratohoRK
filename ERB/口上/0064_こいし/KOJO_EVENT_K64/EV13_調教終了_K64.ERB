;========================================================================
;EV13, 調教終了口上
;========================================================================
;・@EVENTCOMENDから呼び出される
;・口上主が調教終了する直前に表示
;・ARG:1, ARG:2の場合は地の文表示後にPRINTLで空行。その後に口上を表示
;・ARG:0の場合は固有の地の文なし。口上表示の前にPRINTLで空行が入る
;・RESULT 0以上を返すと口上表示後にPRINTLで空行が入る
;-------------------------------------------------
;関連変数…
;FLAG:日常制御	調教終了時状況(1=通常/2=精力0/3=一回休み/4=失神した)
;-------------------------------------------------
@KOJO_EVENT_K64_13(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.普通に終了/1.調教対象が疲れている/2.調教対象が失神した)
;-------------------------------------------------

;────────────────────────────────────
;ARG:1, ARG:2, 疲労・失神による調教終了 FIRSTEVENT(0)～
;────────────────────────────────────
;・調教対象消耗度に応じて疲労/失神に分かれる
;・呼び出しタイミングは地の文の表示→PRINTL→口上の表示
;・EVENT201, 介抱(日常イベント)の箇所を書く場合は、上手く連携できるようにすると良いでしょう
;------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;調教対象が疲れている
;━━━━━━━━━━━━━━━━━━━━━━━━
;・このケースは好意分岐内で処理してもいい気がする
;・現状ではそもそも分けて処理する必要性が薄いと思うけど
;------------------------------------------------
IF 口上記入チェック(0) && ARG == 1
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック(0) && FIRSTEVENT(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;大満足ボーナスを得ている
	;=================================================
	IF 口上記入チェック(0) && TFLAG:今回で大満足
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;相思相愛
	;=================================================
	IF 口上記入チェック(0) && AFFECTION("相思相愛")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;調教対象が失神した
;━━━━━━━━━━━━━━━━━━━━━━━━
;・ここでやった方が楽できる
;・細かくやりたい人だけ、初回以外を好意分岐内に回すとか…
;------------------------------------------------
IF 口上記入チェック() && ARG == 2
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック() && FIRSTEVENT(1)
		PRINTFORMW 「いつまで寝てるの？ さっさと起きてよ」
		PRINTFORMW 「………あれ？」
		RETURN 1
	ENDIF
	
	;=================================================
	;助手がご主人様
	;=================================================
	IF 口上記入チェック() && ASSISTALENT(131) >= 0
		PRINTFORMW 「＊おおっと＊」
		PRINTFORMW 「ごめんね%K64_CNAME(FLAG:2)%…ちょっと調子に乗りすぎちゃった♪」
		RETURN 1
	ENDIF
	
	;=================================================
	;大満足ボーナスを得ている
	;=================================================
	IF 口上記入チェック(0) && TFLAG:今回で大満足
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;相思相愛
	;=================================================
	IF 口上記入チェック(0) && AFFECTION("相思相愛")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック()
		SELECTCASE RAND:3
			CASE 0
				PRINTFORMW 「ぅぅ、またやっちゃった…」
				PRINTFORMW 「こんなに優しくしてるのに…%K64_CNAME()%って弱すぎ…」
				PRINTFORMDW 愚痴りつつも、こいしの声色はどこか弱弱しいものだった
			CASE 1
				PRINTFORMW 「あれ…！？ ちょっと、%K64_CNAME()%ってば」
				PRINTFORMW 「まだ寝る時間じゃないのに…」
			CASEELSE
				PRINTFORMW 「あ、また動かなくなっちゃった…」
				PRINTFORMW 「%K64_CNAME()%って不良品なのかなぁ？」
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

