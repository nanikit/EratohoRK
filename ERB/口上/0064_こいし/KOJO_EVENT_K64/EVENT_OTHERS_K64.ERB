;========================================================================
;EV16, 大満足ボーナス口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・大満足ボーナスを得ている場合、調教開始時に表示される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;-------------------------------------------------
@KOJO_EVENT_K64_16(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.選択前/1.選択後)
;-------------------------------------------------

;────────────────────────────────────
;選択前口上
;────────────────────────────────────
;・上機嫌な様子で、今日は何をされたいかとたずねる
;・口上表示前に地の文(%CALLNAME:TARGET%さま大満足ボーナス)
;・口上表示の後に地の文(%CALLNAME:TARGET%は上機嫌な様子で、今日は何をされたいかとたずねてきた)が続く
;・地の文の後に選択肢が表示される
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択前
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && ARG == 0
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック(0) && FIRSTEVENT(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;相思相愛
	;=================================================
	IF 口上記入チェック() && AFFECTION("相思相愛")
		PRINTFORMW 「えへへー」
		PRINTFORMW 「今日は何して遊ぼうか？」
		RETURN 1
	ENDIF
	
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;選択後口上
;────────────────────────────────────
;・調教対象の返答に対して、一言
;・口上表示に後に地の文(%CALLNAME:TARGET%は%CALLNAME:MASTER%の返事を聞くと調教の準備を始めた)が続く
;・上記の地の文を表示した後に、選択肢毎の地の文が表示される
;・休憩が選択された場合はEV12, ご褒美による中止に続く
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択後
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && ARG == 1
	;とりあえず書きかけなのですよ。方向性だけでも
	;=================================================
	;いつも通り
	;=================================================
	IF 口上記入チェック() && IS_POLICY("今日", "通常")
		SELECTCASE RAND:2
			CASE 0
				PRINTFORMW 「残念だわ。もっと面白い答えを期待していたのに」
			CASEELSE
				PRINTFORMW 「いつもと同じでいいの？」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;アナルをいじめて
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "アナル")
		;いつものことだけど…我ながら酷い。何が酷いかって全部酷いけど汎用的に使える文章が先に出てこない辺りが特に酷い
		;この辺の線引きがまだなのでもう少し待ってー
		IF (ABL:MASTER:Ａ感覚 + TALENT:MASTER:Ａ敏感 - TALENT:MASTER:Ａ鈍感) >= 4
			IF TALENT:MASTER:オトコ
				PRINTFORMW 「は？」
				PRINTFORMW 「%K64_CNAME()%のソレは『おまんこ』でしょ？」
				PRINTFORMW 「ほら、ちゃんと言い直して。『わたしのおまんこいじめてください』って」
			ELSEIF TALENT:MASTER:ふたなり
				PRINTFORMW 「ふーん…敢えてそっちを選ぶんだ…」
				PRINTFORMW 「男の子みたいに掘られながらせーしびゅるびゅる撒き散らしたいのかな？」
			ELSE
				PRINTFORMW 「そんなにお尻が気に入っちゃったの？」
				PRINTFORMW 「ま、仕方ないかな。排泄行為は快感ですもの…ね？」
			ENDIF
		ELSE
			PRINTFORMW 「ふーん。くすくす…」
			PRINTFORMW 「%K64_CNAME()%、自分で何言ってるか判ってる？」
		ENDIF
		RETURN 1
	ENDIF
	
	;選択する事によって(TFLAG:お仕置きフラグ)が立つ
	;=================================================
	;お仕置きして
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "お仕置き")
		IF (ABL:MASTER:拘束中毒 + ABL:MASTER:苦痛中毒 + ABL:MASTER:マゾっ気) >= 15
			PRINTFORMW 「ええー」
			PRINTFORMW 「%K64_CNAME()%はちょっと変態すぎるのよ。あんまり私を困らせないで」
			PRINTFORMW 「何をすればお仕置きになるのか全っ然わからないんだけど…」
		ELSE
			PRINTFORMW 「あら？ 何か隠れて悪さでもしたの？」
			PRINTFORMW 「それとも…大した意味も無くお仕置きされたいの？」
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;激しくして
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "ハード")
		PRINTFORMW 「…いつもの躾はぬるいってこと？」
		RETURN 1
	ENDIF
	
	;=================================================
	;甘えさせて
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "イチャイチャ")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;壊れるまでして
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "異常")
		PRINTFORMW 「正直、勝手に壊れられても困るんだけど」
		PRINTFORMW 「まぁいいわ。壊れない程度に壊してあげる…」
		RETURN 1
	ENDIF
	
	;首輪の所持が条件
	;=================================================
	;外に出たい
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "野外")
		PRINTFORMW 「あら、お散歩したいの？」
		PRINTFORMW 「いいね♪ じゃあ今日はお散歩にしましょ」
		RETURN 1
	ENDIF
	
	;好意+好感度が10000以上で可能になる
	;=================================================
	;孕ませたい
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "子作り")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;調教対象の消耗に関わらず選択可能
	;=================================================
	;休ませて
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "休憩")
		IF CFLAG:MASTER:消耗 >= 3	;調教対象が消耗している
			PRINTFORMW 
		ELSE						;実はそれほど疲れていない
			PRINTFORMW 「…ペットに休暇なんてあったかしら？」
			PRINTFORMW 「ま、別にいいけどね」
		ENDIF
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 本日の方針口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;・大満足ボーナスを得ている場合はそちらが優先される(即ち、この箇所が呼び出される事はない)
;・調教者により本日の方針が決定された場合に表示
;・口上表示の後にPRINTLを挟んで地の文。地の文は方針毎に専用のものになる
;・子作り、休憩はご褒美でしか出ないのでこの箇所では不要
;・Ａ感覚が4までは確率（Ａ感覚、0で1/3）でTFLAG:今日の方針 == 1（Ａ開発）になり1/5の確率で他の方針によって上書きされる
;・Ａ感覚が5以降になると今日の方針 == 1（Ａ開発）になる可能性は無くなる（感覚が上昇すればＡ開発の必要はない、という仕様？）
;-------------------------------------------------
@KOJO_EVENT_K64_17(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(現状、派生なし)
;-------------------------------------------------

;一行空ける(この手の処理は最終的にはシステム側で賄いたいと考える)
PRINTL 

;ABL:MASTER:Ａ感覚 < 5の条件の時のみ発生する可能性がある
;Ａ感覚の上昇に伴い発生確率が落ちてゆき（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12。さらに1/5で他の方針で上書き）、Ａ感覚5以上では完全に発生しなくなる
;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がアナル開発
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "アナル")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がお仕置き
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "お仕置き")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がいつもより激しく
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "ハード")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がイチャイチャ
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "イチャイチャ")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が異常
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "異常")
	PRINTFORMW 
	RETURN 1
ENDIF

