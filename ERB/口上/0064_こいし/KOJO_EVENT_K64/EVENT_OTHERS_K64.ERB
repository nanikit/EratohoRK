;========================================================================
;EV16, 대만족 보너스 구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·대만족 보너스를 얻고 있는 경우, 조교 개시시에 표시된다
;·타이밍은 조교 개시 구상(EV11)의 뒤, 조교자 행동 서두(EV12)의 앞
;-------------------------------------------------
@KOJO_EVENT_K64_16(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(0. 선택전/1. 선택 후)
;-------------------------------------------------

;────────────────────────────────────
;선택 서두
;────────────────────────────────────
;·매우 기분이 좋은 모습으로, 오늘은 무엇을 되고 싶을까 방문한다
;·구상 표시전에 지문(%CALLNAME:TARGET%님대만족 보너스)
;·구상 표시의 뒤로 지문(%CALLNAME:TARGET%는 매우 기분이 좋은 모습으로, 오늘은 무엇을 되고 싶을까 방문해 왔다)가 계속된다
;·지문의 뒤로 선택지가 표시된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족 보너스 선택전
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG == 0
	;=================================================
	;첫회
	;=================================================
	IF 구상기입체크(0) && FIRSTEVENT(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;상사상애
	;=================================================
	IF 구상기입체크() && AFFECTION("상사상애")
		PRINTFORMW 「에헤헤─」
		PRINTFORMW 「오늘은 뭐 해 놀까?」
		RETURN 1
	ENDIF
	
	;=================================================
	;그 외·조건 없음
	;=================================================
	IF 구상기입체크(0)
		PRINTFORMW 
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;선택 뒷맛상
;────────────────────────────────────
;·조교 대상의 대답에 대해서, 한 마디
;·구상 표시에 뒤로 지문(%CALLNAME:TARGET%는 %CALLNAME:MASTER%의 대답을 (들)물으면 조교의 준비를 시작했다)이 계속된다
;·상기의 지문을 표시한 뒤로, 선택지 마다의 지문이 표시된다
;·휴식이 선택되었을 경우는 EV12, 포상에 의한 중지에 계속된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족 보너스 선택 후
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG == 1
	;우선 써 내기인 것이에요. 방향성만이라도
	;=================================================
	;언제나 대로
	;=================================================
	IF 구상기입체크() && IS_POLICY("오늘", "통상")
		SELECTCASE RAND:2
			CASE 0
				PRINTFORMW 「유감이구나. 좀 더 재미있는 대답을 기대하고 있었는데」
			CASEELSE
				PRINTFORMW 「평상시와 같고 좋은거야?」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;애널을 괴롭혀
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "애널")
		;평소의 일이지만… 나로서도 심하다. 무엇이 심한가는 전부 심하지만 범용적으로 사용할 수 있는 문장이 먼저 나오지 않는 근처가 특히 심함
		;이 근처의 선긋기가 아직인 것으로 좀 더 기다려―
		IF (ABL:MASTER:Ａ감각 + TALENT:MASTER:Ａ민감 - TALENT:MASTER:Ａ둔감) >= 4
			IF TALENT:MASTER:남자
				PRINTFORMW 「하?」
				PRINTFORMW 「%K64_CNAME()%의 그것은 『보지』겠지?」
				PRINTFORMW 「이봐요, 분명하게 다시 말해. 『나의 보지 괴롭혀 주세요』는」
			ELSEIF TALENT:MASTER:후타나리
				PRINTFORMW 「흐음… 감히 그쪽을 선택한다…」
				PRINTFORMW 「사내 아이같이 파지면서 키─흩뿌리고 싶은 것인지?」
			ELSE
				PRINTFORMW 「그렇게 엉덩이가 마음에 들어 버렸어?」
				PRINTFORMW 「뭐, 어쩔 수 없을까. 배설 행위는 쾌감인거야…?」
			ENDIF
		ELSE
			PRINTFORMW 「흐음. 킥킥…」
			PRINTFORMW 「%K64_CNAME()%, 스스로 무슨 말하고 있을까 알고 있어?」
		ENDIF
		RETURN 1
	ENDIF
	
	;선택하는 일에 의해(TFLAG:벌플래그)가 선다
	;=================================================
	;벌 해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "벌")
		IF (ABL:MASTER:구속중독 + ABL:MASTER:고통중독 + ABL:MASTER:마조끼) >= 15
			PRINTFORMW 「에에─」
			PRINTFORMW 「%K64_CNAME()%는 조금 변태 지나는거야. 그다지 나를 곤란하게 하지 않고」
			PRINTFORMW 「무엇을 하면 벌이 되는지 전연 모르지만…」
		ELSE
			PRINTFORMW 「아라? 뭔가 숨어 나쁨이라도 했어?」
			PRINTFORMW 「그렇지 않으면… 굉장한 의미도 없고 벌 되고 싶은거야?」
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;격렬하게 해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "하드")
		PRINTFORMW 「… 평소의 예의 범절은 미지근하다는 것?」
		RETURN 1
	ENDIF
	
	;=================================================
	;응석부리게 해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "러브러브")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;=================================================
	;망가질 때까지 해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "이상")
		PRINTFORMW 「정직, 마음대로 망가질 수 있어도 곤란하지만」
		PRINTFORMW 「뭐 좋아요. 망가지지 않는 정도로 부수어 준다…」
		RETURN 1
	ENDIF
	
	;목걸이의 소지가 조건
	;=================================================
	;외에 나가고 싶다
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "야외")
		PRINTFORMW 「아라, 산책하고 싶은거야?」
		PRINTFORMW 「좋다♪그러면 오늘은 산책으로 합시다」
		RETURN 1
	ENDIF
	
	;호의+호감도가 10000이상으로 가능하게 된다
	;=================================================
	;임신하게 하고 싶다
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "자 만들기")
		PRINTFORMW 
		RETURN 1
	ENDIF
	
	;조교 대상의 소모에 관련되지 않고 선택 가능
	;=================================================
	;쉬게 해
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "휴식")
		IF CFLAG:MASTER:소모 >= 3	;조교 대상이 소모하고 있다
			PRINTFORMW 
		ELSE						;실은 그만큼 피곤하지 않다
			PRINTFORMW 「… 애완동물에게 휴가는 있었을까?」
			PRINTFORMW 「뭐, 별로 좋지만 말야」
		ENDIF
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 오늘의 방침 구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·타이밍은 조교 개시 구상(EV11)의 뒤, 조교자 행동 서두(EV12)의 앞
;·대만족 보너스를 얻고 있는 경우는 그 쪽이 우선된다(즉, 이 개소가 불려 가는 일은 없다)
;·조교자에 의해 오늘의 방침이 결정되었을 경우에 표시
;·구상 표시의 뒤로 PRINTL를 사이에 두어 지문. 지문은 방침마다 전용의 것이 된다
;·아이 만들어, 휴식은 포상으로 밖에 나오지 않기 때문에 이 개소에서는 불요
;·Ａ감각이 4까지는 확률（Ａ감각, 0으로 1/3）로 TFLAG:오늘의방침 == 1（Ａ개발）가 되어 1/5의 확률로 다른 방침에 의해 덧쓰기된다
;·Ａ감각이 5이후가 되면오늘의방침 == 1（Ａ개발）가 될 가능성은 없어진다（감각이 상승하면Ａ개발의 필요는 없는, 이라고 하는 사양? ）
;-------------------------------------------------
@KOJO_EVENT_K64_17(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(현상, 파생 없음)
;-------------------------------------------------

;일행 비운다(이 손의 처리는 최종적으로는 시스템측에서 조달하고 싶다고 생각한다)
PRINTL 

;ABL:MASTER:Ａ감각 < 5의 조건때만 발생할 가능성이 있다
;Ａ감각의 상승에 수반해 발생 확률이 떨어져 유키（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12. 한층 더 1/5로 다른 방침으로 덧쓰기）, Ａ감각 5이상으로는 완전하게 발생하지 않게 된다
;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 애널 개발
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "애널")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 벌
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "벌")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 평소보다 격렬하고
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "하드")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 러브러브
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "러브러브")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "이상")
	PRINTFORMW 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "야외")
	PRINTFORMW 
	RETURN 1
ENDIF
