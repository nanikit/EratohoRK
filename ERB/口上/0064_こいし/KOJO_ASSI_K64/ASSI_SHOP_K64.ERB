;*************************************************
;助手ショップイベント口上
;*************************************************

;=================================================
;AEV102, 助手任命口上
;=================================================
;・助手として任命されたときに表示
;・いかなる場合でも「口上主=ASSI」となって呼び出される
;・TARGETが-1になるケースが発生する仕様がまだ残っているのか調べていない
;・ついでにこの関数のARGは機能していない。働いてもいいのよ
;-------------------------------------------------
;=================================================
@KOJO_EVENT_ASSI_K64_102(ARG)
;=================================================
;引数内訳…
;ARG=()
;-------------------------------------------------

;━━━━━━━━━━━━━━━━━━━━━━━━
;ご主人様自ら助手になる
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック() && TALENT:ASSI:ご主人様
	IF TARGET < 0	;調教者が未定
		PRINTFORMW 「ちょっと他の人の躾け方も見てみたいなぁ…」
		PRINTFORMW 「さて、誰に%K64_CNAME(MASTER, 2)%を躾けてもらおうかしら」
	ELSE			;調教者は決まっている
		SELECTCASE NO:TARGET	;調教者分岐
			CASE 61		;さとり
				PRINTFORMW 「お姉ちゃん、私も一緒に付いていってもいい？」
				PRINTFORMW 「お姉ちゃんがどうやって%K64_CNAME(MASTER, 2)%を躾けるか、見てみたいの」
			CASE 62, 63	;燐/空
				PRINTFORMW 「ねぇ、%CALLNAME:TARGET%。私も一緒に付いていってあげよっか」
				PRINTFORMW 「その方がきっと上手くいくわ。私も楽しめるし♪」
			CASEELSE	;上記以外
				PRINTFORMW 「私も一緒に行くわ」
				PRINTFORMW 「でも、躾けるのは%K64_CNAME(TARGET)%だからよろしくね♪」
		ENDSELECT
	ENDIF
	RETURN 3
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;ご主人様の助手になる
;━━━━━━━━━━━━━━━━━━━━━━━━
;・ご主人様の助手になるので、調教者が未定は無い
;------------------------------------------------
IF 口上記入チェック() && TARGET >= 0 && TALENT:TARGET:ご主人様
	SELECTCASE NO:TARGET	;調教者分岐
		CASE 61		;さとり
			PRINTFORMW 「お姉ちゃんのお手伝いをすればいいの？」
			PRINTFORMW 「うん、やってみる♪」
		CASE 62, 63	;燐/空
			PRINTFORMW 「ねぇねぇ%CALLNAME:TARGET%。これから新しいおもちゃで遊ぶんでしょ？」
			PRINTFORMW 「私も一緒に遊びたいなぁ…いい？」
		CASEELSE	;上記以外
			PRINTFORMW 「えっと、%K64_CNAME(MASTER, 2)%を躾けるお手伝いをすればいいのね？」
			PRINTFORMW 「私にちゃんとできるかなぁ…」
	ENDSELECT
	RETURN 3
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;ご主人様以外の助手になる
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック() && ((TARGET < 0) || !TALENT:TARGET:ご主人様)
	IF TARGET < 0	;調教者が未定
		PRINTFORMW 
	ELSE			;調教者は決まっている
		SELECTCASE NO:TARGET	;調教者分岐
			CASE 61		;さとり
				PRINTFORMW 「えへへー、今日はお姉ちゃんと一緒だね」
				PRINTFORMW 「お姉ちゃんの無慈悲で容赦のない躾、楽しみだなぁ♪」
			CASE 62, 63	;燐/空
				PRINTFORMW 「あら、今日は%CALLNAME:TARGET%が躾ける役なのね」
				PRINTFORMW 「でも、私がお姉ちゃんのペットのお手伝いって…普通逆じゃない？」
				IF NO:MASTER == 61	;調教対象がさとりで追加
					PRINTFORMW 「それにしても…」
					PRINTFORMW 「お姉ちゃんのペットがお姉ちゃんを躾ける…？」
					PRINTFORMW 「私はお姉ちゃんのペットのお手伝い…？？」
					PRINTFORMW 「じゃあ%CALLNAME:TARGET%はペットのペットで…私は？？？」
					PRINTFORMW 「うう…わかんなくなってきた…」
				ENDIF
			CASEELSE	;上記以外
				PRINTFORMW 「私はお手伝いをすればいいの？」
				PRINTFORMW 「よろしくね、%K64_CNAME(TARGET)%」
		ENDSELECT
	ENDIF
	RETURN 3
ENDIF
