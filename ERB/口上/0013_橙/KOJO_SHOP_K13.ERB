;─
;EV101, 의상 변경
;─
;·숍으로부터 의상 변경을 실시했을 경우에 표시
;-------------------------------------------------
@KOJO_EVENT_K13_101(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=
;  1의 위…(0, 이제(벌써) 입고 있다, 1, 갈아입은, 2, 부끄러워서 입을 수 없는, 3, 싫어해 입지 않는, 9, 가지고 있지 않다)
;  10의 위…(0, 통상, 10, 반나체, 20, 전라, 30, 속옷 없음)
;  백의 위… 코스프레를 위해서(때문에) 보류
;  천의 위…(0, 조교자, 1000, 조교 대상)
;  예(조교 대상이 부끄러워해전라로 할 수 없었다=1022)
;-------------------------------------------------

;━━━━━━━━━━━━━━━━━━━━━━━━
;조교자가 갈아입었다
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG < 1000 && (ARG % 10) == 1
	SELECTCASE ARG
		;통상이 되었다
		CASE 1
			PRINTFORMW 
			RETURN 1
		;반나체가 되었다
		CASE 11
			PRINTFORMW 
			RETURN 1
		;전라가 되었다
		CASE 21
			PRINTFORMW 
			RETURN 1
	ENDSELECT
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;조교자가 부끄러워해 갈아입을 수 없다
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG < 1000 && (ARG % 10) == 2
	SELECTCASE ARG
		;반나체라도 부끄럽다
		CASE 12
			PRINTFORMW 
			RETURN 1
		;평상시부터전라는 조금……
		CASE 22
			PRINTFORMW 
			RETURN 1
	ENDSELECT
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;조교자가 싫어해 갈아입을 수 없다
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && ARG < 1000 && (ARG % 10) == 3
	SELECTCASE ARG
		;반나체는 싫어
		CASE 13
			PRINTFORMW 
			RETURN 1
		;평상시부터전라는 싫어
		CASE 23
			PRINTFORMW 
			RETURN 1
	ENDSELECT
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;조교자가 갈아입는 것을 그만두었다
;━━━━━━━━━━━━━━━━━━━━━━━━
;%CALLNAME:TARGET%의 의상은 벌써[　　]로 설정되어 있습니다
;------------------------------------------------
IF 구상기입체크(0) && ARG < 1000 && (ARG % 10) == 0
	SELECTCASE ARG
		;통상인 채
		CASE 0
			PRINTFORMW 
			RETURN 1
		;반나체인 채
		CASE 10
			PRINTFORMW 
			RETURN 1
		;전라인 채
		CASE 20
			PRINTFORMW 
			RETURN 1
	ENDSELECT
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;조교 대상을 갈아입게 했다
;━━━━━━━━━━━━━━━━━━━━━━━━
