FOR count_i, 0, 8
	IF ARGS:count_i != ""
		PRINTBUTTON @"[{count_i}] - %ARGS:count_i%", count_i
		PRINTL 
		max_select ++
	ELSE
		BREAK
	ENDIF
NEXT

IF max_select <= 0
	RETURN 0
ENDIF

cur_redraw = CURRENTREDRAW()

$INPUT_LOOP
INPUT

REDRAW 0

IF RESULT >= 0 && RESULT < max_select
	REDRAW cur_redraw
	RETURN RESULT
ENDIF
GOTO INPUT_LOOP

