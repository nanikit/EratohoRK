;--------------------------------------------------
;色振り分け関数 随時適用していきたい
;--------------------------------------------------
@F_COLOR(ARGS)
SELECTCASE ARGS
	CASE IS == "ぬえ"
	SETCOLOR 221,160,221
	CASE IS == "こいし"
	SETCOLOR 0xCCFFFF
	CASE IS == "フラン"
	SETCOLOR 255,64,64
	CASE IS == "星"
	SETCOLOR 240,240,64
	CASE IS == "聖"
	SETCOLOR 255,224,255
ENDSELECT

