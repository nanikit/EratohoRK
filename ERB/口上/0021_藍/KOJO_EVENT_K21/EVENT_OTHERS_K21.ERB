;========================================================================
;EV16, 大満足ボーナス口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・大満足ボーナスを得ている場合、調教開始時に表示される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;-------------------------------------------------
@KOJO_EVENT_K21_16(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.選択前/1.選択後)
;-------------------------------------------------

;────────────────────────────────────
;選択前口上
;────────────────────────────────────
;・上機嫌な様子で、今日は何をされたいかとたずねる
;・口上表示前に地の文(%CALLNAME:TARGET%さま大満足ボーナス)
;・口上表示の後に地の文(%CALLNAME:TARGET%は上機嫌な様子で、今日は何をされたいかとたずねてきた)が続く
;・地の文の後に選択肢が表示される
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択前
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 0
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック(100) && FIRSTEVENT(0)
		PRINTFORMW 「最近は素直でいい子にしてるみたいだからな」
		PRINTFORMW 「たまにはお前の意見も聞いてやろう」
		RETURN 1
	ENDIF
	
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(100)
		PRINTFORMW 「ふふふっ、やっぱりお前は可愛いな」
		PRINTFORMW 「今日はお前の希望も一応聞いておいてやろう」
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;選択後口上
;────────────────────────────────────
;・調教対象の返答に対して、一言
;・口上表示に後に地の文(%CALLNAME:TARGET%は%CALLNAME:MASTER%の返事を聞くと調教の準備を始めた)が続く
;・上記の地の文を表示した後に、選択肢毎の地の文が表示される
;・休憩が選択された場合はEV12, ご褒美による中止に続く
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択後
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 1
	;=================================================
	;いつも通り
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "通常")
		PRINTFORMW 「そうか」
		PRINTFORMW 「じゃあ、いつも通りでいくか」
		RETURN 1
	ENDIF
	
	;=================================================
	;アナルをいじめて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "アナル")
		PRINTFORMW 「そうか、尻ときたか」
		IF TALENT:MASTER:オトコ
			IF EXP:MASTER:Ａ経験 >= 100
				PRINTFORMW 「すっかり前立腺を責められるのが虜になってしまったようだな。ふふふっ」
			ELSE
				PRINTFORMW 「アナルいじられて精液垂れ流すような体にしてやろう。覚悟しろよ」
			ENDIF
		ELSE
			PRINTFORMW 「当然、ちゃんと清潔にはしてきたんだろうな？」
		ENDIF
		RETURN 1
	ENDIF
	
	;選択する事によって(TFLAG:お仕置きフラグ)が立つ
	;=================================================
	;お仕置きして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "お仕置き")
		PRINTFORMW 「お仕置き？ いいのか？ 後悔しても知らないぞ？ ふふっ」
		RETURN 1
	ENDIF
	
	;=================================================
	;激しくして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "ハード")
		PRINTFORMW 「…ふんっ、面白いことを言うな」
		PRINTFORMW 「わ、私も…激しくしてやりたいと思っていたところなんだ…よ…」
		RETURN 1
	ENDIF
	
	;=================================================
	;甘えさせて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "イチャイチャ")
		PRINTFORMW 「なんだ、可愛いことを言うじゃないか」
		PRINTFORMW 「ほら、ここに座れ。じゃれるなりなんなり好きにしていいぞ」
		RETURN 1
	ENDIF
	
	;=================================================
	;壊れるまでして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "異常")
		PRINTFORMW 「壊れたら私が困るのだがな……」
		PRINTFORMW 「まぁいい。ちゃんと耐えるんだぞ」
		RETURN 1
	ENDIF
	
	;首輪の所持が条件
	;=================================================
	;外に出たい
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "野外")
		PRINTFORMW 「なんと生意気な」
		PRINTFORMW 「しかしだ、私が持ちかけた話だ。考えてやろう」
		RETURN 1
	ENDIF
	
	;好意+好感度が10000以上で可能になる
	;=================================================
	;孕ませたい
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "子作り")
		PRINTFORMW 「お前のような下種が私を孕ませたいだと？」
		PRINTFORMW 「何を言うかと思えば……お前の精子が実を結ぶことなどない。ましてや私となんかな」
		PRINTFORMW 「だが、私としてはお前に孕んでもらいたいものだよ……ふふふ」
		TFLAG:今日の方針 = 1
		RETURN 1
	ENDIF
	
	;調教対象の消耗に関わらず選択可能
	;=================================================
	;休ませて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "休憩")
		;調教対象が消耗している
		IF CFLAG:MASTER:消耗 >= 3
			PRINTFORMW 「仕方ないな」
			PRINTFORMW 「じゃあ私も、一緒に休ませてもらおうか」
		;実はそれほど疲れていない
		ELSE
			PRINTFORMW 「本当に疲れてるのか？」
		ENDIF
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 本日の方針口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;・大満足ボーナスを得ている場合はそちらが優先される(即ち、この箇所が呼び出される事はない)
;・調教者により本日の方針が決定された場合に表示
;・口上表示の後にPRINTLを挟んで地の文。地の文は方針毎に専用のものになる
;・子作り、休憩はご褒美でしか出ないのでこの箇所では不要
;・Ａ感覚が4までは確率（Ａ感覚、0で1/3）でTFLAG:今日の方針 == 1（Ａ開発）になり1/5の確率で他の方針によって上書きされる
;・Ａ感覚が5以降になると今日の方針 == 1（Ａ開発）になる可能性は無くなる（感覚が上昇すればＡ開発の必要はない、という仕様？）
;-------------------------------------------------
@KOJO_EVENT_K21_17(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(現状、派生なし)
;-------------------------------------------------

;一行空ける(この手の処理は最終的にはシステム側で賄いたいと考える)
PRINTL

;ABL:MASTER:Ａ感覚 < 5の条件の時のみ発生する可能性がある
;Ａ感覚の上昇に伴い発生確率が落ちてゆき（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12。さらに1/5で他の方針で上書き）、Ａ感覚5以上では完全に発生しなくなる
;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がアナル開発
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "アナル")
	PRINTFORMW 「一人前のケツマンコに仕立て上げてやるぞ」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がお仕置き
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "お仕置き")
	PRINTFORMW 「躾をせねばな」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がいつもより激しく
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "ハード")
	PRINTFORMW 「いい声を聞かせておくれよ」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がイチャイチャ
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "イチャイチャ")
	PRINTFORMW 「んふふ、今日はどうしようか？」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が異常
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "異常")
	PRINTFORMW 「なかなかに不機嫌だ」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が野外
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "野外")
	PRINTFORMW 「ペットらしい扱い方をしてやろう」
	RETURN 1
ENDIF
