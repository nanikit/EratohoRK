;=================================================
;EV101, 衣装変更
;=================================================
;・ショップから衣装変更を行った場合に表示
;-------------------------------------------------
@KOJO_EVENT_K21_101(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=
;　一の位…（0, もう着てる、1, 着替えた、2, 恥ずかしくて着られない、3, 嫌がって着ない、9, 持ってない）
;　十の位…（0, 通常、10, 半裸、20, 全裸、30, 下着無し）
;　百の位…コスプレのために保留
;　千の位…（0, 調教者, 1000, 調教対象）
;　例（調教対象が恥ずかしがって全裸にできなかった＝1022）
;-------------------------------------------------
;天狐が全裸になると…
;-------------------------------------------------
;調教者が着替えた
;-------------------------------------------------
IF 口上記入チェック(100) && ARG < 1000 && (ARG % 10) == 1
	SELECTCASE ARG
		;服を着た
		CASE 1
			TALENT:プライド高い = 1
			TALENT:自制的 = 1
			TALENT:衝動的 = 0
			TALENT:目立ちたがり = 0
			PRINTFORMW 「うん、いつもの格好が落ち着くな」
			PRINTFORMDW 藍は落ち着いた…
			RETURN 2
		;半裸になった
		CASE 11
			PRINTFORMW 「まあ、恥ずかしがることもないか」
			RETURN 2
		;全裸になった
		CASE 21
			TALENT:プライド高い = 0
			TALENT:自制的 = 0
			TALENT:衝動的 = 1
			TALENT:目立ちたがり = 1
			PRINTFORMW 「おおっ、おお…！？これは…なんだか……」
			PRINTFORMDW 藍はそわそわしている…（素質が多少変動します）
			RETURN 2
		;これは現在機能しません@/L
		;……すーすーする
		;CASE 31
		;	PRINTFORMW 「雅というものを教えてやるか」
		;	RETURN 2
	ENDSELECT
ENDIF

;-------------------------------------------------
;調教者が恥ずかしがって着替えられない
;-------------------------------------------------
IF 口上記入チェック(100) && ARG < 1000 && (ARG % 10) == 2
	SELECTCASE ARG
		;半裸だって恥ずかしい
		CASE 21
			PRINTFORMW 「…夏ならともかくな」
			RETURN 2
		;普段から全裸はちょっと……
		CASE 22
			PRINTFORMW 「…いつ紫様が帰ってくるとも限らないし……」
			RETURN 2
		;パンツが無いから恥ずかしいもん！
		CASE 32
			PRINTFORMW 「…あんまり気乗りしないな」
			RETURN 2
	ENDSELECT
ENDIF

;-------------------------------------------------
;調教者が嫌がって着替えられない
;-------------------------------------------------
IF 口上記入チェック(100) && ARG < 1000 && (ARG % 10) == 3
	SELECTCASE ARG
		;半裸は嫌
		CASE 13
			PRINTFORMW 「嫌だ」
			RETURN 2
		;普段から全裸なんて嫌
		CASE 23
			PRINTFORMW 「駄目だ」
			RETURN 2
		;すーすーするのは嫌
		CASE 33
			PRINTFORMW 「変態か」
			RETURN 2
	ENDSELECT
ENDIF

;-------------------------------------------------
;調教対象を着替えさせた
;-------------------------------------------------
IF 口上記入チェック(100) && ARG >= 1000 && (ARG % 10) == 1
	SELECTCASE ARG
		;通常になった
		CASE 1001
			PRINTFORMW 「狐だからな、獲物の皮を剥ぎ取るのも好きなんだ」
			RETURN 2
		;半裸になった
		CASE 1011
			PRINTFORMW 「まあ、これもこれでよろしい」
			RETURN 2
		;全裸になった
		CASE 1021
			PRINTFORMW 「うん、日頃の成果が出てきたな」
			RETURN 2
		;……すーすーする
		CASE 1031
			PRINTFORMW 「…なかなかエッチだな」
			RETURN 2
	ENDSELECT
ENDIF

;-------------------------------------------------
;調教対象が恥ずかしがって着替えられない
;-------------------------------------------------
IF 口上記入チェック(100) && ARG >= 1000 && (ARG % 10) == 2
	SELECTCASE ARG
		;半裸だって恥ずかしい
		CASE 1012
			PRINTFORMW 「まあいいか」
			RETURN 2
		;普段から全裸なんて恥ずかしい
		CASE 1022
			PRINTFORMW 「まあ当然か」
			RETURN 2
		;パンツがないから恥ずかしいもん！
		CASE 1032
			PRINTFORMW 「面倒臭いやつだな」
			RETURN 2
	ENDSELECT
ENDIF

;-------------------------------------------------
;調教対象が嫌がって着替えられない
;-------------------------------------------------
IF 口上記入チェック(100) && ARG >= 1000 && (ARG % 10) == 3
	SELECTCASE ARG
		;半裸は嫌
		CASE 1013
			PRINTFORMW 「期待はずれだ」
			RETURN 2
		;普段から全裸なんて嫌
		CASE 1023
			PRINTFORMW 「……」
			RETURN 2
		;すーすーするのは嫌
		CASE 1033
			PRINTFORMW 「その程度のことも出来ないのか」
			RETURN 2
	ENDSELECT
ENDIF
;=================================================
;EV102, 調教者変更
;=================================================
;・調教者を交代させたときに表示
;-------------------------------------------------
@KOJO_EVENT_K21_102(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0, 口上主が他のキャラに任せた、1, 口上主が調教者になった)
;旧調教者は「%CALLNAME:SHOP_OLDTARGET%」、新調教者は「%CALLNAME:SHOP_NEWTARGET%」で参照できる
;-------------------------------------------------

;-------------------------------------------------
;調教者になった
;-------------------------------------------------
IF 口上記入チェック(0) && ARG == 1
	;//刻印は調教者毎に管理されるのでMARK:MASTER:反抗刻印は0にしかなりません
	;MARK:(FLAG:ご主人様):反抗刻印
	;MARK:TARGET:反抗刻印もしくはMARK:反抗刻印
	;などとしてやる必要があります@/L(2015/01/14)
	[SKIPSTART]
	;調教対象の反抗刻印Lv5以上
	IF MARK:(FLAG:ご主人様):反抗刻印 >= 5
		PRINTFORMW 
	;調教対象の反抗刻印Lv4以下
	ELSE
		PRINTFORMW 
	ENDIF
	[SKIPEND]
	RETURN 2
ENDIF


