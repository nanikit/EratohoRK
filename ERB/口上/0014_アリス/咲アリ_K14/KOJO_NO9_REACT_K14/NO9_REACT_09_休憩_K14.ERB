;─
;휴게계
;─
;· 각 REACT내의 나누는 방법으로서 TFLAG:REACT분류(IS_COMGRONAME)나 SELECTCOM(IS_NOWCOMNAME)가 생각됩니다
;·범위의 넓은 조건으로 주워 버리는 것은 기본적으로 추천합니다만, 경우에 따라서는 그것도 개미라고 생각합니다
;·ACT분류:휴게계의 경우, 회화계 COM(COM0~COM8) 중심의 선택지가 됩니다만
;·상황에 따라서는 그 외의 것이 선택지에 포함될 가능성도 있습니다
;·리액션(REACT)으로 처리되지 않았던 것은 범용 리액션(COM)으로 보완되므로
;·무리하게 모두 묻을 필요는 없습니다
;·필요라고 생각하는 것을 좁혀, COM와의 제휴를 생각해 효율 좋게 구축해야 합니다
;-------------------------------------------------
;※지속 효과가 있는 TEQUIP로 애무계 반응이 선택지가 되는 경우가 있습니다
;-------------------------------------------------
;· 각 REACT내는,&& IS_NOWCOMNAME든지,&& IS_COMGRONAME등의 조건으로 결정하고 쳐 합시다
;·여기에 조건 없음 분기가 있으면, 모두 주워 버려 범용 리액션에 흐르지 않습니다
;·조교 대상의 반응에 관련되지 않고, 같은 리액션 밖에 하지 않게 되어 버립니다
;·요컨데 이것은, 상정된 시스템의 파괴에 연결됩니다
;-------------------------------------------------
;  REACT의 지문은 ACT_MESSAGE.ERB의 TRAIN_MESSAGE2_{TFLAG:ACT}로 처리됩니다
;  기본적으로 지문은 TFLAG:ACT파생에 의해 분기 합니다.
;  휴게계의 경우, ACT파생는 명령에 따른지 아닌지에 할당되어지고 있습니다
;  ACT_MESSAGE.ERB REACTION_MESSAGE.ERB를 참조하면서의 작업을 추천합니다
;-------------------------------------------------

;─
;NO9_REACT90, 쉬게한다·개별 리액션
;─
;·TFLAG:ACT파생(0=보통으로 쉰/1=도구의 탓으로 너무 쉬게 하지 않았다/2=마음대로 자위를하기 시작했다)
;-------------------------------------------------
;상정되는 COM…
;회화계 반응
;	COM:침묵한다/여리게대답한다/무뚝뚝하게대답한다/붙임성좋게대답한다/강하게대답한다/빈정거린다/더하드하게/용서를빈다/기분좋게해줘
;애무계 반응
;	COM:쾌감을참는다/쾌감을받아들인다/기분좋다！
;고통계 반응
;	COM:아픔을참는다/비명을올린다
;-------------------------------------------------
@KOJO_NO9_MS_REACT_K14_90
;-------------------------------------------------
;·지문은 ACT파생로 분기
;·REACT분류가 받아들인다 것 경우만 처리가 다르다
;-------------------------------------------------

LOCALS = %RANDTEXT_K14("후후", "후후", "키득", "킥킥")%

;━━━━━━━━━━━━━━━━━━━━━━━━
;REACT90_0, 보통으로 쉬었다
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && !TFLAG:ACT파생
	;=================================================
	;침묵한다 RANDREACT(0)-(4)
	;=================================================
	IF 구상기입체크(100) && IS_NOWCOMNAME("침묵한다") && TFLAG:REACT부하 < 2
		IF AFFECTION("상사상애")
			PRINTFORMW 「뭐야 그것, 메이드장은 심기 불편함일까?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「별로? 다만 말하고 싶지 않은 기분이야. 상관없어 받을 수 있을까」")
			PRINTFORMW 「그런 일 말해지면 더욱 더 상관하고 싶어지지만?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「하아…, 아휴,」")
		ELSEIF AFFECTION("몹시 사랑함")
			PRINTFORMW 「뭐야, 말하고 싶지 않은 기분이라는 것?」
			PRINTFORMW 「재미없는 고집부린 곳에서, 방법 없다고 생각하지만 말야」
		ELSEIF AFFECTION("권애")
			PRINTFORMW 「저기 사쿠야, 입다물지 말고 뭔가 말하면 어때?」
			PRINTFORMW 「뭐, 그렇게 하고 싶다면 별로 상관없지만」
		ELSE
			PRINTFORMW 「모처럼 쉬게 해 주었는데, 사랑스럽지 않아요…」
			PRINTFORMW 「무엇보다, 지금의 사쿠야의 입장이라면 당연한 반응인 것이겠지만 말이죠,」
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;여리게대답한다 RANDREACT(5)-(9)
	;=================================================
	IF 구상기입체크(100) && IS_NOWCOMNAME("여리게대답한다") && TFLAG:REACT부하 < 2 && TFLAG:REACT파생 < 1
		SELECTCASE RANDREACT(2, 5)
			CASE 0
				PRINTFORMW 「뭐야, 기운이 없네요?」
				PRINTFORMW 「평상시 덜렁이인%CNAME(MASTER, TARGET)%가 그런 모습이라고, 조금 걱정으로 되지만」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「한 마디 불필요한 생각이 들지만, 기분탓일까」")
				PRINTFORMW 「뭐, 그런 일로 해 받을 수 있으면 모가 나지 않아도 괜찮다고 생각해요」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그것은 그렇겠지요…,%CNAME(TARGET)%에 있어서는」")
				PRINTFORMW 「아라? 나의 기분 이상으로 중요한 일은, 지금, 이 장소에는 없을 것이야」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 아휴. 거기까지 단언해지면, 이제(벌써) 아무것도 말할 생각이 들지 않아요」")
				PRINTFORMW 「후후, 그것은 무엇보다, 네」
			CASE 1
				PRINTFORMW 「답지 않네요? 그러한 것」
				PRINTFORMW 「뭐 그렇지만……, 그런 사쿠야의 모습을 볼 수 있던 일을 기뻐해야 할까」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 네네. 좋을대로 말하고 있으면 좋아요」")
				PRINTFORMW 「그렇지만, 말하고 싶은 마음껏 한다고 화내겠지요?」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「당연해요」")
				PRINTFORMW 「… 아휴,」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그것은 여기의 대사야!」")
				PRINTFORMW 「%LOCALS%」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;무뚝뚝하게대답한다 RANDREACT(10)-(14)
	;=================================================
	IF 구상기입체크(100) && IS_NOWCOMNAME("무뚝뚝하게대답한다") && TFLAG:REACT부하 < 2
		IF AFFECTION("상사상애")
			SELECTCASE RANDREACT(2, 10)
				CASE 0
					PRINTFORMW 「기분 나쁜 것 같구나? 혹시 사쿠야, 『그 날』이야?」
					PRINTFORMW 「다양하게 큰 일이어요, 인간은」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「뭐 마음대로 결론 내 혼자서 납득하고 있을까…」")
					PRINTFORMW 「다른 거야?」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「달라요!」")
					PRINTFORM 「아라, 그것은 실례했군요
					CALL AUTOHEARTCB2_K14
					PRINTFORMW 　%LOCALS%…」
				CASE 1
					PRINTFORMW 「저기 사쿠야…, 전부터 말하려고 생각해 있었다지만」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「뭐야」")
					PRINTFORMW 「… 정말로 사랑스럽지 않네요」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「우연이군요? 나도 당신에 그렇게 말하려고 생각하고 있었어」")
					PRINTFORMW 「헤에, 그렇게……. 마음이 맞아요」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「확실히. 그것은 인정해요」")
					PRINTFORML 「…………」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「…………」")
			ENDSELECT
		ELSEIF AFFECTION("몹시 사랑함")
			PRINTFORMW 「아무것도 쉬고 있는 때에 그런 태도 하지 않아도 괜찮은 것이 아닐까」
			PRINTFORMW 「그렇지만 아무튼…, 사쿠야의 그러한 곳, 싫지 않아요」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「낫!? 도대체…, 무슨 말을 하고 있을까…」")
			PRINTFORMW 「이제 와서 이런 일로 수줍은 일 없다고 생각하지만?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그, 그런 것이 아니에요!」")
			PRINTFORMW 「그러면 무엇인 것이야?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「말하고 싶지 않네요…」")
			PRINTFORMW 「뭐, 대답은 기대하고 있지 않았지만. 라고 말하는 것보다…」
			PRINTFORM 「지금의 당신의 모습이 무엇보다가 대답해, 는만의 이야기인 것이지만, 말야
			CALL PRINT_SYMBOL_K14
		ELSEIF AFFECTION("권애")
			PRINTFORMW 「아무튼 그렇구나, 그러한 것은 어느 의미 사쿠야답다고는 생각하지만…」
			PRINTFORMW 「이런 때에 무뚝뚝하게 행동하지 않아도 괜찮은 것이 아니야?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「기대에 따를 수 없어 나빴지요」")
			PRINTFORMW 「… 말하지 않아. 나빴다고 생각하지 않은 주제에」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「에에, 그렇구나. 부정은 하지 않아요」")
			PRINTFORMW 「… 사랑스럽지 않다」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 서로,」")
		ELSE
			PRINTFORMW 「… 사랑스럽지 않네요. 알았지만」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그렇다면, 하나 하나 말할 필요 없는 것이 아닐까?」")
			PRINTFORMW 「그렇구나? 그렇지만 말하지 않고는 있을 수 없는거야. 나쁘지만」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「나쁘다니 이슬정도로도 생각하지 않은 주제에, 자주(잘) 말해요」")
			PRINTFORMW 「… 잘 알고 있지 않아. 과연이, 네.%LOCALS%」
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;붙임성좋게대답한다 RANDREACT(15)-(19)
	;=================================================
	IF 구상기입체크(100) && IS_NOWCOMNAME("붙임성좋게대답한다") && TFLAG:REACT부하 < 2
		SELECTCASE RANDREACT(2, 15)
			CASE 0
				PRINTFORMW 「(이)나다 사쿠야도 참…, 도대체 어떻게 해 버렸을까」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「하? 어떤 의미야」")
				PRINTFORMW 「묘하게 애교가 있는 것은 사쿠야로 해서는 부자연스럽다고 생각해?」
				PRINTFORMW 「연금술용의 소재에서도 군것질했던가 하고」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「의미를 몰라요, 앨리스…」")
			CASE 1
				PRINTFORMW 「지금 것은 조금 사랑스러웠어요. 당신에도 그런 일면이 있던 거네, 사쿠야?」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 당연해요. 오히려 지금쯤 깨닫는다든가, 조금 둔한 것이 아닐까」")
				PRINTFORMW 「… 전언 철회. 기분탓이었던 것 같다」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그래, 그것은 유감이구나」")
				PRINTFORM 「… 마음에도 없는 일을 자주(잘) 말해요
				;상사상애의 경우는 이야기가 계속된다
				IF AFFECTION("상사상애")
					PRINTFORML . 뭐, 그것은 차치하고…」
					PRINTFORMW 「끝이 없기 때문에 슬슬 이 근처로 하고 싶은 것이지만?」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그렇구나, 이론은 없어요」")
					PRINTFORMW 「아라, 드물게 마음이 맞았군요」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 말해져 보면. 뭐 가끔 좋은 것이 아닐까」")
					PRINTFORMW 「그렇구나, 나도 그렇게 생각해요. 후후」
					CALL PRINTCOLORW(COLOR_K14("사쿠야"), @"「%LOCALS%」")
				;상사상애가 아닌 경우 괄호 닫아 끝
				ELSE
					PRINTFORMW 」
				ENDIF
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;강하게대답한다 RANDREACT(20)-(24)
	;=================================================
	IF 구상기입체크(100) && IS_NOWCOMNAME("강하게대답한다") && TFLAG:REACT파생 < 1 && TFLAG:REACT부하 < 2
		IF AFFECTION("상사상애")
			;야 이것?
			PRINTFORMW 「저기…, 쉰다 라고 할 때에 그 말투는 조금 어때?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「뭐야, 비위에 거슬렸을까」")
			PRINTFORMW 「별로? 다만…… 상관하기를 원해서 그런 일 말하고 있는 것이 아닌지, 는」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그런 일 있는 것…… 라고 할까, 의미를 몰라요」")
			;1/3의 확률로 표시
			IF !RAND:3
				PRINTFORML 「그래?」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「그래요」")
				PRINTFORMW 「그것은 유감이구나. 다만…」
				PRINTFORMW 「이렇게 해 이야기하고 있는 것 자체, 당신의 계산중이라고 하면 조금 적이군요」
				PRINTFORMW 「뭐, 사쿠야가에 그런 계산을 할 수 있다고는 생각되지 않지만」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「헤에, 말해 주지 않아…」")
				PRINTFORML 「글쎄, 이 정도는 말하게 해 받아요. 원래 사쿠야가 먼저 걸어 왔지 않아」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「기억에 없네요」")
				PRINTFORMW 「보케하려면 아직 빠르다고 생각하지만? 무엇보다, 시간을 멈추는 분, 노화가 빠른 것일까?」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 재미있는 농담이군요」")
				PRINTFORMW 「그것은 오해. 나, 농담을 말한 생각 없는 것」
				CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「…………」")
				PRINTFORMW 「… 자업자득이야」
			ENDIF
		ELSEIF AFFECTION("몹시 사랑함")
			PRINTFORMW 「… 아휴,. 정말, 당신의 상대는 지쳐요. 사쿠야」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「당신에 그런 일 말해지는 도리는 없어요, 앨리스…」")
			PRINTFORMW 「견해의 상위군요. 나는 그렇게는 생각하지 않아요」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「… 아 그렇게. 그러면 마음대로 말하면 좋아요」")
			PRINTFORML 「에에, 물론. 말해지지 않아도 그렇게 할 생각이야」
			;페이드 아웃
			CALL FADE(20, COLOR2_K14("ALICE"), COLOR_K14("black"), "「후후……」")
			CLEARLINE 1
		ELSEIF AFFECTION("권애")
			PRINTFORMW 「뭐, 사쿠야는 그 정도가 아니면. 당신의 그러한 곳, 싫지 않고. 다만…」
			PRINTFORMW 「아무것도 쉬고 있는 때에 그런 태도 하지 않아도 괜찮은 것이 아니야?」
			CALL PRINTCOLORW(COLOR_K14("사쿠야"), "「나의 제멋대로여요, 그런 것」")
