			CALL PRINTCOLORW(COLOR_K14("咲夜"), "「あまりジロジロ見ないで頂けるかしら…」")
			PRINTFORMW 「どうして？」
			CALL PRINTCOLORW(COLOR_K14("咲夜"), "「落ち着かないからよ」")
			PRINTFORMW 「……判った」
			CALL PRINTCOLORW(COLOR_K14("咲夜"), "「え？」")
			PRINTFORM 「もっと落ち着かない気分にさせてあげるわ、咲夜
			CALL PRINT_SYMBOL_K14
			CALL PRINTCOLORW(COLOR_K14("咲夜"), "「そんなことだろうと思ったわよ……」")
			PRINTFORMW 「ふふふ…」
