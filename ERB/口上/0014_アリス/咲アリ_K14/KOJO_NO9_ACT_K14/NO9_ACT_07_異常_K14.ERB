		CALL PRINTCOLORW(COLOR_K14("咲夜"), "「何よ、これ。一体どういうつもりよ」")
		PRINTFORML 「どういうつもりもなにも…、ただの」
		CALL PRINTCOLORW(COLOR_K14("咲夜"), "「ただの？」")
		
		PRINTFORM 「
		CALL PRINTFONTSTYLE(COLOR2_K14("ALICE"), "放置プレイ", 1)
