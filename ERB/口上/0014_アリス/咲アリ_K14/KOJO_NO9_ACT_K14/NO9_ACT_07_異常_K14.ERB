	SELECTCASE RANDACT(3, 0)
		CASE 0
			PRINTFORMW 「所在なさげな咲夜の姿をみるのも悪くないわね」
			CALL PRINTCOLORW(COLOR_K14("咲夜"), "「悪趣味ね、アリス…」")
