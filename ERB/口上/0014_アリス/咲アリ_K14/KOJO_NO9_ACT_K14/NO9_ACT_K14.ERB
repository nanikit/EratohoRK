;記入チェック
LOCAL = 0
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック() && ARG:2 == 0
	;=================================================
	;姿勢変化あり
	;記入チェック
	LOCAL:1 = 0
	;=================================================
	IF 口上記入チェック() && ARG >= 0
		;=================================================
		;自由
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 0
			PRINTFORMW
			RETURN LOCAL
		ENDIF
	
		;=================================================
		;仰向け
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 1
			PRINTFORMW
			RETURN LOCAL
		ENDIF
		
		;=================================================
		;座り
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 2
			PRINTFORMW
			RETURN LOCAL
		ENDIF
	
		;=================================================
		;四つん這い
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 3
			PRINTFORMW
			RETURN LOCAL
		ENDIF
		
		;=================================================
		;起立
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 4
			PRINTFORMW
			RETURN LOCAL
		ENDIF
	
		;=================================================
		;膝立ち
		;記入チェック
		LOCAL:1 = 0
		;=================================================
		IF 口上記入チェック() && ARG == 10
			PRINTFORMW
			RETURN LOCAL
		ENDIF
	ENDIF
	
	;=================================================
	;姿勢変化なし
	;記入チェック
	LOCAL:1 = 0
	;=================================================
	IF 口上記入チェック() && !ARG
		PRINTFORMW
		RETURN LOCAL
	ENDIF
ENDIF

