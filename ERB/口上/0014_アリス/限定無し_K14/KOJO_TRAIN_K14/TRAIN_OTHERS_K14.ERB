	;状態変化持続ターンを2に
	TCVAR:状態変化持続 = 2
	;2/3の確率で表示無し RESULTに0を返す
	IF RAND:3
		RETURN 0
	;1/3の確率で表示
	ELSE
		SELECTCASE TENSION(TARGET, 8)
			CASE "高い"
				PRINTFORMW 「疲れたけど…心地よい疲れって感じね…♪」
			CASE "一般"
				PRINTFORMW 「ちょっと疲れたわね…」
			CASE "低い"
				PRINTFORMW 「ふぅ……疲れたわね……」
		ENDSELECT
		RETURN 2
