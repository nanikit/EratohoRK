;*************************************************
;EV22_0, 조교자 상태 변화
;*************************************************
;T_COND TARGET가 지정한 상태라면 진을 돌려준다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;앨리스님[피폐]화
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && T_COND("피폐") && !TFLAG:한번휴식
	;상태 변화 지속 턴을 2에
	TCVAR:상태변화지속 = 2
	;2/3의 확률로 표시 없음 RESULT에 0을 돌려준다
	IF RAND:3
		RETURN 0
	;1/3의 확률로 표시
	ELSE
		SELECTCASE TENSION(TARGET, 8)
			CASE "높다"
				PRINTFORMW 「지쳤지만… 기분 좋은 피로라는 느낌이군요…♪」
			CASE "일반"
				PRINTFORMW 「조금 지쳤군요…」
			CASE "낮다"
				PRINTFORMW 「후우…… 지쳤군요……」
		ENDSELECT
		RETURN 2
	ENDIF
ENDIF

