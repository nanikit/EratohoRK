	;[1]まずは心の声
	IF TALENT:MASTER:読心能力 == 2
		;現状、狂気なしのTARGETは"鬱屈"にならないはずだが、とりあえず"情欲"と並列させておく
		;全て網羅してるのでCASEELSEは設けない構え
		SELECTCASE GET_CONDITION(TARGET)
			;現状機能するとは思えない。でもやっておく
			CASE "疲弊", "衰弱"
				CALL FADEIN(12, "（なんか、疲れたわね……）")
			;CASE "衰弱"
			CASE "無気力"
				CALL FADEIN(12, "（はぁ～、何もやる気が起きないわね…）")
			CASE "朦朧"
				CALL FADEIN(12, "（頭が…、くらくらするわ……）")
			CASE "情欲", "鬱屈"
				CALL FADEIN(12, "（私、ちょっと興奮しすぎね。落ち着かなきゃ…）")
			CASE "怒り"
				CALL FADEIN(12, "（本当に頭にくる…。でも、ちょっと落ち着くべきよね……）")
			CASE "退屈"
				CALL FADEIN(12, "（本当、退屈ね。暫くの間放置してやるから…）")
			CASE "通常"
				IF 0
				ELSEIF CFLAG:TARGET:依存度 > CFLAG:MASTER:依存度
					CALL FADEIN(12, "（やだこれ寂しくて…、私の方が辛いわ。今すぐにでも抱きつきたくなっちゃう…）")
					WAIT
					PRINTFORMW 「…………」
					PRINTFORMDW %CALLNAME%は何も言わず、ただ%CALLNAME:MASTER%の姿を見つめている…
					;ここにヒットしたらRETURNして完結させる
					RETURN 1
				ELSEIF GET_KFLAG_K14("相思相愛")
					CALL FADEIN(12, "（くやしいけど、離れてると私の方が不安になるわね。でも今は……）")
				ELSEIF AFFECTION("相思相愛")
					CALL FADEIN(12, "（私が傍にいないと落ち着かないみたい。でも今は駄目……")
				ELSEIF AFFECTION("溺愛")
					CALL FADEIN(12, "（ちょっと不安そうね。可愛らしいとこあるじゃない……）")
				ELSEIF AFFECTION("眷愛")
					CALL FADEIN(12, @"（良く見てみると、結構\@ TALENT:MASTER:オトコ ? いい男よね # 可愛いわね \@……）")
				ELSE
					CALL FADEIN(12, "（こうして見ると、間抜けな顔してるわね……）")
				ENDIF
		ENDSELECT
		;ウェイトをして[2]に続く
		WAIT
	ENDIF
	
	;[2]次に普通の台詞
	SELECTCASE GET_CONDITION(TARGET)
		CASE "疲弊", "衰弱"
			PRINTFORMW 「暫くの間、好きにしてるといいわ。といっても…」
			PRINTFORMW 「あまり勝手な真似されると困るけど」
		;CASE "衰弱"
		CASE "無気力"
			PRINTFORMW 「今は面倒みる気がしないのよ。勝手にしてるといいわ」
		CASE "朦朧"
			PRINTFORMW 「そこで大人しくしていなさい…」
		CASE "情欲", "鬱屈"
			PRINTFORMW 「べ、別に何でもないわよ！ そこで大人しくしてなさい…」
		CASE "怒り"
			PRINTFORMW 「そこを動くんじゃないわよ。暫くの間、そのままでいなさい…」
		CASE "退屈"
			PRINTFORMW 「悪いけど、今は何もする気がないの。あとは勝手にしてるといいわ」
		CASE "通常"
			PRINTFORMW 「…………」
			PRINTFORMDW %CALLNAME%は何も言わず、ただ%CALLNAME:MASTER%の姿を見つめている…
	ENDSELECT
	;終端でRESULT2を返す
	RETURN 2
ENDIF

