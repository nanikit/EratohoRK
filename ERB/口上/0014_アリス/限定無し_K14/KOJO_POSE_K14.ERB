;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && !ARG:2
	;=================================================
	;仰向け
	;=================================================
	IF 口上記入チェック(0) && ARG == 1
		PRINTFORMW
		IF ARG:1 >= 0
			SELECTCASE ARG:1
				CASE 0
				CASE 1
				CASE 2
			ENDSELECT
		ELSE
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;座り
	;=================================================
	IF 口上記入チェック(0) && ARG == 2
	ENDIF
	
	;=================================================
	;四つん這い
	;=================================================
	IF 口上記入チェック(0) && ARG == 3
	ENDIF
	
	;=================================================
	;起立
	;=================================================
	IF 口上記入チェック(0) && ARG == 4
	ENDIF
	
	;=================================================
	;膝立ち
	;=================================================
	IF 口上記入チェック(0) && ARG == 10
	ENDIF
	
	;=================================================
	;自由
	;=================================================
	IF 口上記入チェック(0) && ARG == 0
	ENDIF
ENDIF
