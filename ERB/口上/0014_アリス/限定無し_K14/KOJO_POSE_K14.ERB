IF 口上記入チェック(0) && ARG:2 == 0
	;=================================================
	;姿勢変化あり
	;=================================================
	IF 口上記入チェック(0) && ARG >= 0
		;=================================================
		;自由
		;=================================================
		IF 口上記入チェック(0) && ARG == 0
		ENDIF
		
		;=================================================
		;仰向け
		;=================================================
		IF 口上記入チェック(0) && ARG == 1
		ENDIF
		
		;=================================================
		;座り
		;=================================================
		IF 口上記入チェック(0) && ARG == 2
		ENDIF
	
		;=================================================
		;四つん這い
		;=================================================
		IF 口上記入チェック(0) && ARG == 3
		ENDIF
		
		;=================================================
		;起立
		;=================================================
		IF 口上記入チェック(0) && ARG == 4
		ENDIF
		
