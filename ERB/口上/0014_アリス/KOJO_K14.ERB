;DIGEST
;━━━━━━━━━━━━━━━━━━━━━━━━
;ここが呼ばれる時点で当該キャラは一時的にTARGETになっており、@KOJO_COLOR_KXがCALLされている。
;故に文字色をデフォルトで表示させたい場合は、PRINTD系なりPRINTFORMD系を使う必要がある
;FADEIN, FADEOUTは@KOJO_COLOR_KXで設定した色で表示される。これはFULLCUTIN系も同様
;-------------------------------------------------
;=================================================
;対象限定以外
;=================================================
@KOJO_DIGEST_K14
#LOCALSIZE 1
#DIM LINE, 1
VARSET LOCAL
LOCAL:0 = CURRENTREDRAW()
;ノーマルモードの場合
IF FLAG:モード == 0
	PRINTDW ――魔法の森に住む人形遣い。人間に対して友好的な魔法使い。
	{
	CALL HTMLPRINTDW("　　その実体は謎に包まれ、" + 
		@"%HTMLFONT(@"<b>%CALLNAME:MASTER%</b>", "ＭＳ 明朝", COLOR2_K14("白"))%には縁遠い存在だった。")
	}
	PRINTDW 　　そういった存在と関わる事はないものと思っていた。自分は生涯平穏に過ごすものと思っていた。
	PRINTDW 　　しかし今、平穏な日々は終わりを告げ、運命の歯車が回りだす――
	PRINTL
	;行位置を保存
	LINE = LINECOUNT
	;フォントをセット
	CALL SETFONT_K14
	;中央で表示
	ALIGNMENT CENTER
	;フェードイン
	CALL FADEIN(20, "こんなつもりじゃなかった、でも…")
	;WAITはだるいのでTWAITで
	TWAIT 2500, 0
	PRINTL
	CALL FADEIN(20, "――もう引き返せない")
	TWAIT 3000, 0
	;TWAIT3_ZWEIをCALL
	CALL TWAIT3_ZWEI_K14
	;フォントを戻す
	CALL RESETFONT_K14
	;左寄せに戻す
	ALIGNMENT LEFT
	REDRAW 0
	;保存した行位置まで行削除
	CLEARLINE LINECOUNT - LINE
	REDRAW LOCAL:0
;サンドボックスの場合
ELSEIF FLAG:モード == 1
	{
	CALL HTMLPRINTDL(@"　　%HTMLFONT("<b>※</b>", , 0xA8142F)%" + 
		"このモードの場合、専用オープニング、イベント、エンディングはありません")
	}
;エクストラモードの場合かつ咲夜以外がMASTERの場合
ELSEIF FLAG:モード == 9 && NO:MASTER != 9
	{
	CALL HTMLPRINTDL(@"　　%HTMLFONT("<b>※</b>", , 0xA8142F)%このモードで" + 
		@"%HTMLFONT("<b>咲夜</b>", "ＭＳ 明朝", COLOR2_K14("咲夜"))%" + 
		"以外が主人公の場合、専用オープニング、イベント、エンディングはありません")
	}
ENDIF
WAIT
RETURN 1

