;COM0, 沈黙する
;────────────────────────────────────
;・従ったことにはならない
;・ACT1,今の気分を聞く/自分への気持ちを聞くの場合はREACT派生1,"質問に答えない"となりお仕置きポイント加算
;・REACT印象:悪印象小
;・依存度変化(-1, -1)
;-------------------------------------------------
;・ACTが今の気分を聞く/自分への気持ちを聞くの場合は派生1,質問に答えない扱い
;・その他の場合は派生0,ただの沈黙
;--------------------------------------------------
;・TFLAG:REACT派生(0=ただの沈黙/1=質問に答えない)
;-------------------------------------------------
;=================================================
@KOJO_COM_K15_0
;=================================================
;━━━━━━━━━━━━━━━━━━━━━━━━
;COM0, 沈黙する
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100)
	;ACT, 今の気分を聞く/自分への気持ちを聞くの場合に派生する
	;=================================================
	;質問に答えない
	;=================================================
	IF 口上記入チェック(100) && TFLAG:REACT派生 == 1
		;消費気力による派生
		SELECTCASE GET_COM_RANK()
			CASE "自然な行動", "無理のない行動"
				;2/3
				IF RAND:3
					PRINTFORMW 「黙ってちゃわかりませんよ？」
					PRINTFORMW 「むー、リリーはどうしたらいいんでしょうか」
				;1/3
				ELSE
					PRINTFORMW 「ん？　もしかして……寝て…あっ起きてましたね」
					PRINTFORMW 「それでは……続き、始めますね♪」
				ENDIF
			CASE "無理をした行動"
				;実はまんざらでもない
				IF COMCOR_POSI()
					PRINTFORMW 「なんだかお顔がにやけてません……？」
					PRINTFORMW 「あの、気になるんでちゃんと言って欲しいです」
				;実は嫌
				ELSE
					PRINTFORMW 「リリーとお話するの嫌いなんですか？」
					PRINTFORMW 「むー……ちょっとショックですね」
				ENDIF
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;無理をした行動
	;=================================================
	IF 口上記入チェック(100) && GET_COM_RANK() == "無理をした行動"
		;実はまんざらでもない
		IF COMCOR_POSI()
			PRINTFORMW 「ねぇ、今何か言いかけませんでした？」
			PRINTFORMW 「そーゆーのとっても気になっちゃうんですけど……」
		;実は嫌
		ELSE
			PRINTFORMW 「%CNAME(MASTER)%、今とっても怖い顔してますよ」
			PRINTFORMW 「ねぇ、黙ってないでちゃんと言ってください」
		ENDIF
		RETURN 1
	ENDIF
	
	;================================================
	;ACT分類が加虐
	;================================================
	IF 口上記入チェック(100) && MENUMATCH(TFLAG:ACT, "加虐")
		SELECTCASE RANDCOM(3, 0)
			CASE 0
				PRINTFORMW 「あれ、もう限界なんですか？」
				PRINTFORMW 「ちゃんと反応してくれなきゃつまんないですよ」
			CASE 1
				PRINTFORMW 「むー、もっと叫んでくれてもいいんですよ？」
				PRINTFORMW 「その方がリリーも楽しいですし、%CNAME(MASTER)%も盛り上がるんじゃないですか？」
			CASE 2
				PRINTFORML 「もしもーし？　むー、つまんないですっ！」
				PRINTFORMW 「%CNAME(MASTER)%がその気なら、もう少し激しくしてみましょうか？」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;================================================
	;ACT分類が休憩
	;================================================
	IF 口上記入チェック(100) && MENUMATCH(TFLAG:ACT, "休憩")
		SELECTCASE RANDCOM(2, 1)
			CASE 0
				PRINTFORML 「リリーは『喋るな』なんて言ってませんよ？」
				PRINTFORMW 「せっかくのお休みなんですから、お話しましょうよ」
			CASE 1
				PRINTFORML 「疲れ切って口もきけませんか……」
				PRINTFORMW 「リリー……またやり過ぎちゃいましたか？」
		ENDSELECT
		RETURN 1
	ENDIF

	;-------------------------
	;その他
	;-------------------------
	IF RAND:3
		SELECTCASE RANDCOM(2, 10)
			CASE 0
				PRINTFORMW 「静かでなんだか不気味です……うぅ」
				PRINTFORMW 「り、リリーを怖がらせようったって無駄ですからねっ！」
			CASE 1
				PRINTFORML 「リリー程のご主人様になれば、無理矢理喋らせる方法だっていっぱい知ってるんですよ？」
				PRINTFORMW 「でも無理矢理は嫌ですし……もう少し素直に、というか可愛く反応して欲しいですねー」
		ENDSELECT
	ELSE
		IF 0
		ELSEIF AFFECTION("相思相愛") && !T_COND("怒り") && PERCENT(60)
			PRINTFORMW 「まぁお顔を見れば%CNAME(MASTER)%の事は大体わかりますけど……」
			PRINTFORMW 「やっぱり%CNAME(MASTER)%の声を聴かせて欲しいです」
		ELSEIF AFFECTION("溺愛") && !T_COND("怒り") && PERCENT(60)
			PRINTFORMW 「もーっ、どうしちゃったんですか？」
			PRINTFORMW 「いつもはもっと素直でいい子なのに……」
		ELSEIF AFFECTION("眷愛") && !T_COND("怒り") && PERCENT(60)
			PRINTFORMW 「言わなきゃ伝わらない事だっていっぱいあるんですよ？」
			PRINTFORMW 「そんな態度じゃリリーはつまんないですっ」
		ELSEIF AFFECTION("恐怖") || T_COND("怒り")
			PRINTFORMW 「いったい何を考えてるんでしょうね……」
			PRINTFORMW 「ねぇ、リリーを怒らせると怖いんですよ？」
		ELSE
			PRINTFORMW 「静かでなんだか不気味です……うぅ」
			PRINTFORMW 「り、リリーを怖がらせようったって無駄ですからねっ！」
		ENDIF
	ENDIF
	RETURN 1
ENDIF

