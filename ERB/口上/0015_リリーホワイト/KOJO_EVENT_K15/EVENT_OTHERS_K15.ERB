;========================================================================
;EV16, 大満足ボーナス口上（調教開始時）
;========================================================================
;・@EVENTTRAINから呼び出される
;・大満足ボーナスを得ている場合、調教開始時に表示される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;-------------------------------------------------
@KOJO_EVENT_K15_16(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.選択前/1.選択後)
;-------------------------------------------------

;────────────────────────────────────
;選択前口上
;────────────────────────────────────
;・上機嫌な様子で、今日は何をされたいかとたずねる
;・口上表示前に地の文(%CALLNAME:TARGET%さま大満足ボーナス)
;・口上表示の後に地の文(%CALLNAME:TARGET%は上機嫌な様子で、今日は何をされたいかとたずねてきた)が続く
;・地の文の後に選択肢が表示される
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択前
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 0
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック(100) && FIRSTEVENT(0)
		PRINTFORMW 「調教を始める前に、%CNAME(MASTER)%に聞きたいんですけど……
		PRINTFORMW 　『リリーの身体を好きにしたい』『もっと激しく責めて欲しい』って、
		PRINTFORM 　そんな風に考えた事、ありませんか？……くすっ…当然、ありますよねっ
		CALL HEARTCB
		PRINTFORMW 」
		PRINTL  
		PRINTFORMDW リリーは柔らかな肢体を押し付けるようにして%CALLNAME:MASTER%にしな垂れかかると、
		PRINTFORMDW 耳元に唇を寄せ、甘く蕩けるような声で囁いてきた……
		PRINTL  
		PRINTFORMW 「毎日、良質な精をリリーに捧げてくれて……ありがとうごさいます」
		PRINTFORMW 「リリーね、こう見えて%CNAME(MASTER)%のこと結構気に入ってるんですよ？」
		PRINTFORM 「……だから、これはリリーからのほんのお返し……特別な『ご褒美』です
		CALL HEARTCB
		PRINTFORMW 」
		PRINTL  
		PRINTFORMW 「ほら、恥ずかしがらないで言ってみて？　リリーにどんなことをシて欲しい？」
		PRINTFORM 「今日だけは特別……%CNAME(MASTER)%のお願い、何でも聞いてあげますよ
		CALL HEARTCB
		PRINTFORMW 」
		RETURN 1
	ENDIF
	
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(100)
		SELECTCASE RANDEVENT(2, 0)
			CASE 0
				PRINTFORMW 「ねぇ、リリーにして欲しい事ってありますか？」
				PRINTFORMW 「いつんも頑張ってる%CNAME(MASTER)%へ、リリーからの特別な『ごほーび』ですっ」
				PRINTFORM 「ほらっ、遠慮しないで言ってごらんっ
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「ねぇ、今日はどんなことがシたいですか？」
				PRINTFORMW 「%CNAME(MASTER)%のえっちな妄想、リリーが叶えてあげるね……」
				PRINTFORM 「ほら、おいで
				CALL HEARTCB
				PRINTFORM 　特別な『ご褒美』のお時間ですよっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;選択後口上
;────────────────────────────────────
;・調教対象の返答に対して、一言
;・口上表示に後に地の文(%CALLNAME:TARGET%は%CALLNAME:MASTER%の返事を聞くと調教の準備を始めた)が続く
;・上記の地の文を表示した後に、選択肢毎の地の文が表示される
;・休憩が選択された場合はEV12, ご褒美による中止に続く
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択後
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 1
	;=================================================
	;いつも通り
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "通常")
		SELECTCASE RANDEVENT(2, 1)
			CASE 0
				PRINTFORMW 「いつも通りでいいんですか！？」
				PRINTFORMW 「もっと凄いこともできるんですけど……欲が無いですねぇ」
				PRINTFORM 「なにはともあれ……ご希望に沿えるよう、いつも通り頑張っちゃいますねっ
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「いつものやり方で満足してるって事でしょうか？」
				PRINTFORMW 「なんだか照れちゃいますね……えへへっ♪」
				PRINTFORM 「いつも通りで…でも、いつも以上に満足させてみせますねっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;アナルをいじめて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "アナル")
		SELECTCASE RANDEVENT(2, 2)
			CASE 0
				PRINTFORM 「お尻えっち、気持ちいですもんねっ
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORMW 「ほら、お尻をこっちに向けて……『くぱぁ』って開いてごらん？」
				PRINTFORM 「ふふっ……いっぱい、いっぱい いじめてあげますねっ
				CALL HEARTCB
				PRINTW 」
			CASE 1
				PRINTFORM 「もうすっかりお尻えっちの虜ですねっ
				CALL HEARTCB
				PRINTFORMW 」
				IF TALENT:MASTER:オトコ
					PRINTFORMW 「男の子だから、余計に感じちゃうのかな？　ふふっ♪」
					PRINTFORM 「おいで……%RAND_SPLIT("猫ちゃん/女の子")%みたいにいっぱい鳴かせてあげますねっ
					CALL HEARTCB
					PRINTFORMW 」
				ELSE
					PRINTFORM 「おまんこよりこっちが好きだなんて……ド変態ですねっ
					CALL HEARTCB
					PRINTFORMW 」
					PRINTFORM 「おいで……%RAND_SPLIT("猫ちゃん/牝豚")%みたいにいっぱい鳴かせてあげますねっ
					CALL HEARTCB
					PRINTFORMW 」
				ENDIF
		ENDSELECT
		RETURN 1
	ENDIF
	
	;選択する事によって(TFLAG:お仕置きフラグ)が立つ
	;=================================================
	;お仕置きして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "お仕置き")
		SELECTCASE RANDEVENT(2, 3)
			CASE 0
				PRINTFORMW 「相変わらず%RAND_SPLIT("ドＭのヘンタイさん/マゾ豚さん")%らしいリクエストですねぇ……」
				PRINTFORM 「いいですよ…リリーも遠慮しませんから、思う存分泣き叫んでくださいねっ
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「こんな時まで『お仕置き』をねだるなんて……」
				PRINTFORMW 「本当に根っからの%RAND_SPLIT("ドＭのヘンタイさん/マゾ豚さん")%なんですねぇ……」
				PRINTFORMW 「ほら、こっちに来なさい……%CNAME(MASTER)%の中の汚い物、全部絞り出してあげますからっ！」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;激しくして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "ハード")
		SELECTCASE RANDEVENT(2, 4)
			CASE 0
				PRINTFORMW 「狂っちゃうくらいの快感で、失神するまでイキまくりたい……ですか？」
				PRINTFORM 「あなたのえっちな夢……リリーが叶えてあげますねっ
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「ほんと、快楽に貪欲ですよねぇ……くすっ♪」
				PRINTFORM 「おいで……腰が抜けちゃうくらいの快感、教えてあげますねっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;甘えさせて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "イチャイチャ")
		SELECTCASE RANDEVENT(2, 5)
			CASE 0
				PRINTFORM 「大きくなっても、まだまだ甘えんぼさんですね
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORMW 「ほら、おいで……ぎゅ～ってして、いっぱいなでなでしてあげる……」
				PRINTFORM 「好きなだけ、ママに甘えていいからね……
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORM 「ママのおっぱいが恋しくなっちゃいましたか？　なんてね
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORMW 「ほら、おいで……%CNAME(MASTER)%の心の中の辛い事、苦しい事……」
				PRINTFORM 「リリーがぜ～んぶ吸い出してあげますねっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;=================================================
	;壊れるまでして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "異常")
		SELECTCASE RANDEVENT(2, 6)
			CASE 0
				PRINTFORMW 「リリーのおもちゃになりたいの？　あははっ♪」
				PRINTFORM 「いいですよ……欲望のまま、目茶苦茶に犯してあげますねっ
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORM 「リリーもね、%CNAME(MASTER)%の事を目茶苦茶に犯したいってずっと思ってたのっ
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORM 「もう、我慢しなくていいんだよね……壊れるまで、シてあげるっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;首輪の所持が条件
	;=================================================
	;外に出たい
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "野外")
		SELECTCASE RANDEVENT(2, 7)
			CASE 0
				PRINTFORMW 「お外に行って、誰かに気付かれたらどうします？」
				PRINTFORMW 「妖精さんに首輪を引かれて、えっちなイタズラされてるの見られちゃいますよ？」
				PRINTL  
				PRINTFORMW 「なんて……それがいいんですよねっ♪」
				PRINTFORM 「折角ですし……えっちな姿、見せつけちゃいましょうか
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「気分転換にお外もいいですよねっ♪」
				PRINTFORM 「今日は天気もいいから、誰かに逢えるかも……なんてね
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORM 「折角ですし、%RAND_SPLIT("大ちゃんの家/サニーちゃん達の家/チルノちゃんの家/人里/神社")%の近くでシちゃいますか？　くすっ
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;好意+好感度が10000以上で可能になる
	;=================================================
	;孕ませたい
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "子作り")
		;---------------------
		;初回
		;---------------------
		IF 口上記入チェック(100) && !TALENT:TARGET:処女 && FIRSTEVENT(7)
			PRINTFORMW 「孕ませ……たい……？」
			PRINTFORMW 「あのっ、えっと！！　赤ちゃんが……えぇっ！？」
			PRINTL  
			PRINTFORMDW リリーの顔がまるで茹蛸のように首元まで真っ赤に染まっていく……
			PRINTFORMDW 両手で顔を覆い隠し、%CALLNAME:MASTER%の視線から逃れるように俯いた……
			PRINTL  
			PRINTFORMW 「いえ、その……い、嫌じゃ……ないです、けど……」
			PRINTFORMW 「今までも……いっぱい、エッチしましたけど……」
			PRINTFORMW 「%CNAME(MASTER)%から……こんな風に求められるなんて、思ってなくて……」
			PRINTL  
			PRINTFORMDW リリーは今にも消え入りそうな小さな声で、『嬉しいです…』と呟いた……
			PRINTL  
			PRINTFORM 「そ、それじゃ……えっち…しましょうか
			CALL HEARTCB
			PRINTFORMW 」
			RETURN 1
		ENDIF
		;---------------------
		;その他
		;---------------------
		SELECTCASE RANDEVENT(2, 8)
			CASE 0
				PRINTFORM 「うん……えっち、しよう
				CALL HEARTCB
				PRINTFORMW 」
				PRINTFORM 「子宮が溺れちゃうくらい……せーえき、いっぱい膣内出ししてね
				CALL HEARTCB
				PRINTFORMW 」
			CASE 1
				PRINTFORMW 「いつもはね、赤ちゃんが出来ないように気を遣ってるんですけど……」
				PRINTFORM 「今日は……そんなの気にしないで、%CNAME(MASTER)%と繋がっていいんですよね……
				CALL HEARTCB
				PRINTFORMW 」
				PRINTL  
				PRINTFORMDW リリーが臍の下辺りに手を添えると、身体の奥から淡い桃色の光が浮かび上がってくる…
				PRINTFORMDW 一瞬の明滅の後、桃色の光が消え……リリーは恍惚の表情を浮かべて%CALLNAME:MASTER%を見つめてきた…
				PRINTL  
				PRINTFORMW 「今なら、ほんとうに孕んじゃうかもしれませんね……」
				PRINTFORM 「リリーを%CNAME(MASTER)%のせーえきで、孕ませてください……
				CALL HEARTCB
				PRINTFORMW 」
		ENDSELECT
		RETURN 1
	ENDIF
	
	;調教対象の消耗に関わらず選択可能
	;=================================================
	;休ませて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "休憩")
		;調教対象が消耗している
		IF CFLAG:MASTER:消耗 >= 3
			PRINTFORMW 「……体力、つけましょうか」
			PRINTFORM 「ご褒美はまた今度あげますから、ゆっくり休んでくださいね
			CALL HEARTCB
			PRINTFORMW 」
		;実はそれほど疲れていない
		ELSE
			PRINTFORMW 「よしっ、今日の調教はお休みですっ！」
			PRINTFORM 「たまには普通に遊んだり、デートするのもいいかもしれませんねっ
			CALL HEARTCB
			PRINTFORMW 」
		ENDIF
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 本日の方針口上
;========================================================================
;・@EVENTTRAINから呼び出される
