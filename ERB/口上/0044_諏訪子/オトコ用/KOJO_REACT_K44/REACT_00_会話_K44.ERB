;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;COM0, 침묵한다
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && IS_NOWCOMNAME("침묵한다")
	PRINTFORMW 「당겼군 이 녀석!」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
