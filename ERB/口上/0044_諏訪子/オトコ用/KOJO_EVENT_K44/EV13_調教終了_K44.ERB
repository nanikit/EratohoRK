IF 口上記入チェック(100) && TFLAG:今回で大満足
	;=================================================
	;初回
	;=================================================
	IF FIRSTEVENT(10)
		PRINTFORMW 「なかなか良かったわよ、○あげちゃう♪」
		PRINTFORMW 「いやまだ認めたわけじゃないし、調子に乗らないの」
		RETURN 1
	ENDIF

	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(100)
		CALL HTMLPRINTW(@"「ん%HTML_HEARTB()%　合格合格%HTML_HEARTB()%　よかったわよ」")
		PRINTFORMW 「次ももっと満足させられるよう頑張ってね」
		RETURN 1
	ENDIF
ENDIF

