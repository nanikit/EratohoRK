;방침이 벌
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상 기입 체크(0) && IS_POLICY("오늘", "벌")
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 평소보다 격렬하고
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상 기입 체크(0) && IS_POLICY("오늘", "하드")
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 러브러브
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상 기입 체크(0) && IS_POLICY("오늘", "러브러브")
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상 기입 체크(0) && IS_POLICY("오늘", "이상")
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상 기입 체크(0) && IS_POLICY("오늘", "야외")
ENDIF
