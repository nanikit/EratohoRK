IF 口上記入チェック(0) && IS_POLICY("今日", "イチャイチャ")
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が異常
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "異常")
ENDIF

