;========================================================================
;EV16, 大満足ボーナス口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・大満足ボーナスを得ている場合、調教開始時に表示される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;-------------------------------------------------
@KOJO_EVENT_K1_16(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(0.選択前/1.選択後)
;-------------------------------------------------
;────────────────────────────────────
;選択前口上
;────────────────────────────────────
;・上機嫌な様子で、今日は何をされたいかとたずねる
;・口上表示前に地の文(%CALLNAME:TARGET%さま大満足ボーナス)
;・口上表示の後に地の文(%CALLNAME:TARGET%は上機嫌な様子で、今日は何をされたいかとたずねてきた)が続く
;・地の文の後に選択肢が表示される
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択前
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 0
	;=================================================
	;初回
	;=================================================
	IF 口上記入チェック(100) && FIRSTEVENT(0)
		;選択肢で止まるのでWをLに変更
		PRINTFORML 「ところで、なにか要望はあるかしら？」
		PRINTFORML 「あんたの好きな事、してあげるって言ってるのよ」
		RETURN 1
	ENDIF
	;=================================================
	;その他・条件なし
	;=================================================
	IF 口上記入チェック(100)
		;初回に移転
		PRINTFORML 「私は満足だったから」
		PRINTFORML 「今度はあんたの好きな事、してあげるわ」
		RETURN 1
	ENDIF
ENDIF

;────────────────────────────────────
;選択後口上
;────────────────────────────────────
;・調教対象の返答に対して、一言
;・口上表示に後に地の文(%CALLNAME:TARGET%は%CALLNAME:MASTER%の返事を聞くと調教の準備を始めた)が続く
;・上記の地の文を表示した後に、選択肢毎の地の文が表示される
;・休憩が選択された場合はEV12, ご褒美による中止に続く
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;大満足ボーナス選択後
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && ARG == 1
	;=================================================
	;いつも通り
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "通常")
		PRINTFORMDW %CALLNAME:TARGET%がジト目で睨みつけてくる
		PRINTFORML
		PRINTFORML 「あんたね…それって『何が食べたい？』って聞かれて『何でもいい』って言うのと一緒よ」
		PRINTFORML 「受け身もここまで来ると病気ね」
		RETURN 1
	ENDIF
	
	;=================================================
	;アナルをいじめて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "アナル")
		PRINTFORMW 「この変態。」
		PRINTFORML 「まあいいわ…\@ TALENT:MASTER:オトコ ? あんたの事、オンナにしてあげる #  \@」
		RETURN 1
	ENDIF
	
	;選択する事によって(TFLAG:お仕置きフラグ)が立つ
	;=================================================
	;お仕置きして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "お仕置き")
		;自慰させられてイきそうになったら逆レイプ大好きです
		PRINTFORML 「おしおきレイプしてくださいって事ね」
		;実際にしてくれるかは状況次第なのではぐらかす
		CALL FADEOUT(8, "「うん。まあ、その」")
		PRINTFORML 「考えておいてあげるわ」
		RETURN 1
	ENDIF
	
	;=================================================
	;激しくして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "ハード")
		PRINTFORML 「無理矢理犯されたいって事よね」
		PRINTFORML 「興が乗ってきたら%RAND_SPLIT("して/やって")%あげる」
		RETURN 1
	ENDIF
	
	;=================================================
	;甘えさせて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "イチャイチャ")
		;大抵恥ずかしがる/ハードにしての二択になるのがキスの現状
		;アナル責めされる/ご奉仕パイズリ/イラマさせられる状況は発生しうる
		IF !RAND:4
			PRINTFORMW 「どうしようかしら？」
			PRINTFORMDL %CALLNAME:TARGET%が%CALLNAME:MASTER%の膝に腰を降ろし甘えてきた
			PRINTFORML 「良いわよ。私の気が済んだら、ね」
			PRINTFORML 肩越しに見える霊夢の頬は、赤い。
		ELSEIF !RAND:3
			CALL FADEOUT(8, "なでなで")
			PRINTFORMW 「はいおしまい」
			PRINTFORMDW %CALLNAME:TARGET%は調教を切り上げようとした
			PRINTFORML 「もっと？」
			CALL FADEOUT(6, "くすっ")
			PRINTFORML 「はいはい」
		ELSEIF !RAND:2
			PRINTFORMDW %CALLNAME:TARGET%は%CALLNAME:MASTER%の膝に腰を降ろしてきた
			PRINTFORML 「うん」
		ELSE
			;甘味が強い為改善
			PRINTFORML 「いいわよ」
			PRINTFORMDW %CALLNAME:TARGET%は%CALLNAME:MASTER%の頬に唇を当ててきた
			PRINTFORMW 「%RAND_SPLIT("一杯。/")%一杯、ちゅーしましょ」
			PRINTFORM 「
			CALL HEARTBW
			PRINTFORML 
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;壊れるまでして
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "異常")
		PRINTFORMW 「馬鹿」
		PRINTFORML 「あんたに壊れられて困るのは、あんたじゃないのよ」
		RETURN 1
	ENDIF
	
	;首輪の所持が条件
	;=================================================
	;外に出たい
	;=================================================
	IF 口上記入チェック(0) && IS_POLICY("今日", "野外")
		RETURN 1
	ENDIF
	
	;好意+好感度が10000以上で可能になる
	;=================================================
	;孕ませたい
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "子作り")
		PRINTFORMDW %CALLNAME:TARGET%を孕ませたいと告げると、%CALLNAME:TARGET%はふるっと身をふるわせた
		PRINTFORM 「いいわよ。あんたの赤ちゃん産んであげる
		CALL HEARTBW
		IF TALENT:Ｖ敏感 == 0
			PRINTFORMDW %CALLNAME:TARGET%は一時的に[Ｖ敏感]を得た
			PRINTFORML
			TALENT:Ｖ敏感 = 1
		ENDIF
		RETURN 1
		;文字の綺麗な女の子というステータス 愛液で落ちる為必中ではない筆誅
		;PRINTFORMDL %CALLNAME:TARGET%は%CALLNAME:MASTER%の陰茎にすらすらと毛筆を走らせた
		;PRINTFORML 「これ？Ａ装備よ」
		;PRINTFORMDW %CALLNAME:MASTER%は一時的に[追尾]を得た
	ENDIF
	
	;調教対象の消耗に関わらず選択可能
	;=================================================
	;休ませて
	;=================================================
	IF 口上記入チェック(100) && IS_POLICY("今日", "休憩")
		SELECTCASE TIME
			;昼
			CASE 0
				PRINTFORMW 「いいわよ。今、お茶を淹れるわね」
				PRINTFORML
				PRINTFORMDL ずぞぞっ…
				PRINTFORMW ずずっ…
				PRINTFORML 
				PRINTFORML
				PRINTFORMW 「ふう。これが一番落ち着くわ」
			;夜
			CASEELSE
				PRINTFORMW 「いいわよ。ところで…」
				PRINTFORMW 「ね？今日のおゆはん、なにか食べたいものあるかしら？」
				PRINTL
				PRINTFORMDL [0] お味噌汁
				PRINTFORMDL [1] 肉じゃが
				PRINTFORMDL [2] すき焼き
				PRINTFORMDL [3] %CALLNAME:TARGET%
				PRINTFORMDL [4] 外に出たい
				PRINTFORMDL [5] 醤油
				PRINTFORMDL [6] 生麦生米生卵
				CALL INPUTINT(0, 1, 2, 3, 4, 5, 6)
				SELECTCASE RESULT
					CASE 0
						PRINTFORMW 「いいわよ。%CALLNAME:MASTER%の為にお味噌汁、作ってあげる」
						;ズゾゾの加筆。お茶との差別化にカタカナを使用。
						PRINTFORMDL 
						PRINTFORMDL …
						PRINTFORMDL ……
						PRINTFORMDL ………
						PRINTFORML 
						PRINTFORMDL ズゾゾ
						PRINTFORML 
						;ここでズゾゾするのはあなただけで十分
						;霊夢の分のズゾゾを入れるとするならば、娘や萃香やこころちゃんでちゃぶ台がにぎやかになっていく描写。もしくはその後の食事描写も欲しくなる。
					CASE 1
						PRINTFORMW 「いいわよ。肉じゃがね」
						PRINTFORMDW 炊事場に立つ%CALLNAME:TARGET%の後姿を眺めながら%CALLNAME:MASTER%は休息をとった…
					CASE 2
						;巫女さんに和弓
						PRINTFORMW 「いいわよ。すき焼きね」
						PRINTFORML
						PRINTFORMW 「お肉が無いわね……鳥肉でいいわよね？」
						PRINTFORMDL %CALLNAME:TARGET%が弓を持ち出し外に出ると、程無く野鳥を手に戻ってきた
						PRINTFORMDW 巫女さんに和弓…そういうのもあるのか
					CASE 3
						PRINTFORMW 「%RAND_SPLIT("この助平/すけべ/馬鹿")%」
						PRINTFORML
						PRINTFORMDW その晩の食卓にはずらりと精のつく料理が並んだ
						PRINTFORMDL %CALLNAME:TARGET%はお盆で口元を隠しながら%CALLNAME:MASTER%の様子を伺っている
					CASE 4
						PRINTFORMW 「そうね…たまには外で食べましょうか」
						PRINTFORMDL %CALLNAME:TARGET%は%CALLNAME:MASTER%の腕に抱き着いてきた
						PRINTFORML
						PRINTFORML 「逃げないように、こうしておくわ」
					CASE 5
						PRINTFORMW 「どこの兵役逃れよ」
						PRINTFORMW 「そこまでして休みたいのかしら…」
						;ご飯抜きにはしない。休み描写に対応する為描写追加
						PRINTFORML
						PRINTFORMDW その日の夕食は醤油ご飯だった
					CASE 6
						PRINTFORMDW %CALLNAME:MASTER%のささやかな抵抗は功を奏した
						PRINTFORML
						PRINTFORMDL その日の夕食は卵かけ麦ご飯だった
				ENDSELECT
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 本日の方針口上
;========================================================================
;・@EVENTTRAINから呼び出される
;・タイミングは調教開始口上(EV11)の後、調教者行動前口上(EV12)の前
;・大満足ボーナスを得ている場合はそちらが優先される(即ち、この箇所が呼び出される事はない)
;・調教者により本日の方針が決定された場合に表示
;・口上表示の後にPRINTLを挟んで地の文。地の文は方針毎に専用のものになる
;・子作り、休憩はご褒美でしか出ないのでこの箇所では不要
;・Ａ感覚が4までは確率（Ａ感覚、0で1/3）でTFLAG:今日の方針 == 1（Ａ開発）になり1/5の確率で他の方針によって上書きされる
;・Ａ感覚が5以降になると今日の方針 == 1（Ａ開発）になる可能性は無くなる（感覚が上昇すればＡ開発の必要はない、という仕様？）
;-------------------------------------------------
@KOJO_EVENT_K1_17(ARG)
;-------------------------------------------------
;引数内訳…
;ARG=(現状、派生なし)
;-------------------------------------------------

;一行空ける(この手の処理は最終的にはシステム側で賄いたいと考える)
PRINTL

;ABL:MASTER:Ａ感覚 < 5の条件の時のみ発生する可能性がある
;Ａ感覚の上昇に伴い発生確率が落ちてゆき（0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12。さらに1/5で他の方針で上書き）、Ａ感覚5以上では完全に発生しなくなる
;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がアナル開発
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "アナル")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がお仕置き
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "お仕置き")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がいつもより激しく
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "ハード")
	PRINTFORML 「うーん。そうね、今度は…」
	PRINTFORM 「
	;こちらはサド巫女の考える酷い事なのでピンク文字
	IF TALENT:サド
		PRINTFORMD ひどいこと。
		PRINTFORML してあげる」
	;こちらはあなたにとっての酷い事なので白文字
	ELSE
		PRINTFORML ひどいこと。してあげる」
	ENDIF
	;夜
	;人間で生娘な霊夢さんによる精一杯のさでずむ。明かりを消してあげない。勿論霊夢さんの方が恥ずかしい。
	SIF TIME
		PRINTFORMDL %CALLNAME:TARGET%は明かりも消さずに行為を開始した…
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針がイチャイチャ
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(100) && IS_POLICY("今日", "イチャイチャ")
	PRINTFORML 「何よ…たまにはベタベタひっつきたくなるのよ」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が異常
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "異常")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;方針が野外
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 口上記入チェック(0) && IS_POLICY("今日", "野外")
	PRINTFORML 
