;========================================================================
;EV16, 대만족 보너스 구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·대만족 보너스를 얻고 있는 경우, 조교 개시시에 표시된다
;·타이밍은 조교 개시 구상(EV11)의 뒤, 조교자 행동 서두(EV12)의 앞
;-------------------------------------------------
@KOJO_EVENT_K1_16(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(0. 선택전/1. 선택 후)
;-------------------------------------------------
;─
;선택 서두
;─
;·매우 기분이 좋은 모습으로, 오늘은 무엇을 되고 싶을까 방문한다
;·구상 표시전에 지문(%CALLNAME:TARGET%님대만족 보너스)
;·구상 표시의 뒤로 지문(%CALLNAME:TARGET%는 매우 기분이 좋은 모습으로, 오늘은 무엇을 되고 싶을까 방문해 왔다)가 계속된다
;·지문의 뒤로 선택지가 표시된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족 보너스 선택전
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && ARG == 0
	;=================================================
	;첫회
	;=================================================
	IF 구상기입체크(100) && FIRSTEVENT(0)
		;선택지로 멈추므로 W를 L로 변경
		PRINTFORML 「그런데, 뭔가 요망은 있을까?」
		PRINTFORML 「너가 좋아하는 일, 해 준다 라고 하고 있는거야」
		RETURN 1
	ENDIF
	;=================================================
	;그 외·조건 없음
	;=================================================
	IF 구상기입체크(100)
		;첫회에 이전
		PRINTFORML 「나는 만족이었기 때문에」
		PRINTFORML 「이번은 너가 좋아하는 일, 해 주어요」
		RETURN 1
	ENDIF
ENDIF

;─
;선택 뒷맛상
;─
;·조교 대상의 대답에 대해서, 한 마디
;·구상 표시에 뒤로 지문(%CALLNAME:TARGET%는 %CALLNAME:MASTER%의 대답을 (들)물으면 조교의 준비를 시작했다)이 계속된다
;·상기의 지문을 표시한 뒤로, 선택지 마다의 지문이 표시된다
;·휴게가 선택되었을 경우는 EV12, 포상에 의한 중지에 계속된다
;-------------------------------------------------
;━━━━━━━━━━━━━━━━━━━━━━━━
;대만족 보너스 선택 후
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && ARG == 1
	;=================================================
	;언제나 대로
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "통상")
		PRINTFORMDW %CALLNAME:TARGET%가 반쯤 뜬 눈으로 노려봐 온다
		PRINTFORML
		PRINTFORML 「너… 그 거 『무엇을 먹고 싶어?』는 (들)물어 『뭐든지 좋다』라고 말하는 것과 함께」
		PRINTFORML 「수동도 여기까지 오면 병이군요」
		RETURN 1
	ENDIF
	
	;=================================================
	;애널을 괴롭혀
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "애널")
		PRINTFORMW 「이 변태.」
		PRINTFORML 「뭐 좋아요…\@ TALENT:MASTER:남자 ? 너의 일, 여자로 해 준다#  \@」
		RETURN 1
	ENDIF
	
	;선택하는 일에 의해(TFLAG:벌플래그)가 선다
	;=================================================
	;벌 해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "벌")
		;자위 당해갈것같다가 되면 역강간 정말 좋아합니다
		PRINTFORML 「벌강간해 주세요라는 일이군요」
		;실제로 해 줄까는 상황 나름인 것으로 따돌린다
		CALL FADEOUT(8, "「응. 뭐, 그」")
		PRINTFORML 「생각해 두어 주어요」
		RETURN 1
	ENDIF
	
	;=================================================
	;격렬하게 해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "하드")
		PRINTFORML 「무리하게 범해지고 싶다는 일이군요」
		PRINTFORML 「흥이 타 오면%RAND_SPLIT("해/해")%준다」
		RETURN 1
	ENDIF
	
	;=================================================
	;응석부리게 해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "러브러브")
		;대체로 부끄러워한다/하드하게 한 2택이 되는 것이 키스의 현상
		;애널 고문 된다/봉사 파이즈리/이라마 당하는 상황은 발생할 수 있다
		IF !RAND:4
			PRINTFORMW 「어떻게 하지?」
			PRINTFORMDL %CALLNAME:TARGET%가%CALLNAME:MASTER%의 무릎에 허리를 내려 응석부려 왔다
			PRINTFORML 「좋아요. 나의 기분이 풀리면,」
			PRINTFORML 어깨 너머로 보이는 레이무의 뺨은, 붉다.
		ELSEIF !RAND:3
			CALL FADEOUT(8, "스윽스윽")
			PRINTFORMW 「네끝」
			PRINTFORMDW %CALLNAME:TARGET%는 조교를 끝맺으려고 했다
			PRINTFORML 「좀 더?」
			CALL FADEOUT(6, "키득")
			PRINTFORML 「네네」
		ELSEIF !RAND:2
			PRINTFORMDW %CALLNAME:TARGET%는%CALLNAME:MASTER%의 무릎에 허리를 내려 왔다
			PRINTFORML 「응」
		ELSE
			;감미가 강하기 때문에 개선
			PRINTFORML 「좋아요」
			PRINTFORMDW %CALLNAME:TARGET%는%CALLNAME:MASTER%의 뺨에 입술을 대어 왔다
			PRINTFORMW 「%RAND_SPLIT("가득. /")%가득, -합시다」
			PRINTFORM 「
			CALL HEARTBW
			PRINTFORML 
		ENDIF
		RETURN 1
	ENDIF
	
	;=================================================
	;망가질 때까지 해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "이상")
		PRINTFORMW 「바보」
		PRINTFORML 「너가 망가질 수 있어 곤란한 것은, 너가 아니야」
		RETURN 1
	ENDIF
	
	;목걸이의 소지가 조건
	;=================================================
	;외에 나가고 싶다
	;=================================================
	IF 구상기입체크(0) && IS_POLICY("오늘", "야외")
		RETURN 1
	ENDIF
	
	;호의+호감도가 10000이상으로 가능하게 된다
	;=================================================
	;임신하게 하고 싶다
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "자 만들기")
		PRINTFORMDW %CALLNAME:TARGET%를 임신하게 하고 싶다고 고하면,%CALLNAME:TARGET%는 거절하는 와 몸을 떨었다
		PRINTFORM 「좋아요. 너의 아기 낳아 준다
		CALL HEARTBW
		IF TALENT:V민감 == 0
			PRINTFORMDW %CALLNAME:TARGET%는 일시적으로[V민감]을 얻었다
			PRINTFORML
			TALENT:V민감 = 1
		ENDIF
		RETURN 1
		;문자의 예쁜 여자 아이라고 하는 스테이터스 애액으로 떨어지기 때문에(위해) 필중이 아닌 필주
		;PRINTFORMDL %CALLNAME:TARGET%는 %CALLNAME:MASTER%의 음경에 술술모필을 달리게 했다
		;PRINTFORML 「이것? A장비야」
		;PRINTFORMDW %CALLNAME:MASTER%는 일시적으로[추적]을 얻었다
	ENDIF
	
	;조교 대상의 소모에 관련되지 않고 선택 가능
	;=================================================
	;쉬게 해
	;=================================================
	IF 구상기입체크(100) && IS_POLICY("오늘", "휴게")
		SELECTCASE TIME
			;낮
			CASE 0
				PRINTFORMW 「좋아요. 지금, 차를 끓여요」
				PRINTFORML
				PRINTFORMDL …
				PRINTFORMW 염주…
				PRINTFORML 
				PRINTFORML
				PRINTFORMW 「후우. 이것이 제일 침착해요」
			;밤
			CASEELSE
				PRINTFORMW 「좋아요. 그런데…」
				PRINTFORMW 「저기? 오늘의 저녁밥, 뭔가 먹고 싶은 것 있을까?」
				PRINTL
				PRINTFORMDL [0] 된장국
				PRINTFORMDL [1] 고기감자조림
				PRINTFORMDL [2] 스키야키
				PRINTFORMDL [3] %CALLNAME:TARGET%
				PRINTFORMDL [4] 외에 나가고 싶다
				PRINTFORMDL [5] 간장
				PRINTFORMDL [6] 생 무기우 요네오알
				CALL INPUTINT(0, 1, 2, 3, 4, 5, 6)
				SELECTCASE RESULT
					CASE 0
						PRINTFORMW 「좋아요.%CALLNAME:MASTER%를 위해서(때문에) 된장국, 만들어 준다」
						;즈조조의 가필. 차와의 차별화에 카타카나를 사용.
						PRINTFORMDL 
						PRINTFORMDL …
						PRINTFORMDL ……
						PRINTFORMDL ………
						PRINTFORML 
						PRINTFORMDL 즈조조
						PRINTFORML 
						;여기서 즈조조 하는 것은 당신만으로 충분히
						;레이무의 분의 즈조조를 넣는다고 한다면, 아가씨나 췌향이나 마음로 식탁이 떠들썩하게 되어 가는 묘사. 혹은 그 후의 식사 묘사도 갖고 싶어진다.
					CASE 1
						PRINTFORMW 「좋아요. 고기감자조림이군요」
						PRINTFORMDW 취사장에 선다%CALLNAME:TARGET%의 뒷모습을 바라보면서%CALLNAME:MASTER%는 휴식을 취했다…
					CASE 2
						;무녀씨에게 화궁
						PRINTFORMW 「좋아요. 스키야키군요」
						PRINTFORML
						PRINTFORMW 「고기가 없네요…… 닭고기로 좋네요?」
						PRINTFORMDL %CALLNAME:TARGET%가 활을 꺼내 밖에 나오면, 이윽고 들새를 손으로 돌아왔다
						PRINTFORMDW 무녀씨에게 화궁… 그러한 것도 있는 것인가
					CASE 3
						PRINTFORMW 「%RAND_SPLIT("이 호색가/호색가/바보")%」
						PRINTFORML
						PRINTFORMDW 그날 밤의 식탁에는 죽 정령이 붙는 요리가 줄섰다
						PRINTFORMDL %CALLNAME:TARGET%는 추석으로 입가를 숨기면서%CALLNAME:MASTER%의 모습을 살피고 있다
					CASE 4
						PRINTFORMW 「그렇구나… 가끔 씩은 밖에서 먹을까요」
						PRINTFORMDL %CALLNAME:TARGET%는%CALLNAME:MASTER%의 팔에 껴안아 왔다
						PRINTFORML
						PRINTFORML 「도망치지 않도록, 이렇게 해 두어요」
					CASE 5
						PRINTFORMW 「어디의 병역 피해라」
						PRINTFORMW 「거기까지 해 쉬고 싶은 것일까…」
						;밥빼기에는 하지 않는다. 휴일 묘사에 대응하기 때문에(위해) 묘사 추가
						PRINTFORML
						PRINTFORMDW 그 날의 저녁식사는 간장 밥이었다
					CASE 6
						PRINTFORMDW %CALLNAME:MASTER%의 자그마한 저항은 공을 세웠다
						PRINTFORML
						PRINTFORMDL 그 날의 저녁식사는 알내기보리 밥이었다
				ENDSELECT
		ENDSELECT
		RETURN 1
	ENDIF
ENDIF

;========================================================================
;EV17, 오늘의 방침 구상
;========================================================================
;·@EVENTTRAIN로부터 불려 간다
;·타이밍은 조교 개시 구상(EV11)의 뒤, 조교자 행동 서두(EV12)의 앞
;·대만족 보너스를 얻고 있는 경우는 그 쪽이 우선된다(즉, 이 개소가 불려 가는 일은 없다)
;·조교자에 의해 오늘의 방침이 결정되었을 경우에 표시
;·구상 표시의 뒤로 PRINTL를 사이에 두어 지문. 지문은 방침마다 전용의 것이 된다
;·아이 만들어, 휴게는 포상으로 밖에 나오지 않기 때문에 이 개소에서는 불요
;·A감각이 4까지는 확률(A감각, 0으로 1/3)로 TFLAG:오늘의방침 == 1(A개발)이 되어 1/5의 확률로 다른 방침에 의해 덧쓰기된다
;·A감각이 5이후가 되면오늘의방침 == 1(A개발)이 될 가능성은 없어진다(감각이 상승하면 A개발의 필요는 없는, 이라고 하는 사양?)
;-------------------------------------------------
@KOJO_EVENT_K1_17(ARG)
;-------------------------------------------------
;인수 내역…
;ARG=(현상, 파생 없음)
;-------------------------------------------------

;일행 비운다(이 손의 처리는 최종적으로는 시스템측에서 조달하고 싶다고 생각한다)
PRINTL

;ABL:MASTER:A감각 < 5의 조건때만 발생할 가능성이 있다
;A감각의 상승에 수반해 발생 확률이 떨어져 유키(0=1/3, 1=1/4, 2=1/6. 3=1/8. 4=1/12. 한층 더 1/5로 다른 방침으로 덧쓰기), A감각 5이상으로는 완전하게 발생하지 않게 된다
;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 애널 개발
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "애널")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 벌
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "벌")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 평소보다 격렬하고
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && IS_POLICY("오늘", "하드")
	PRINTFORML 「응. 그렇구나, 이번은…」
	PRINTFORM 「
	;이쪽은 새디즘 무녀의 생각하는 심한 일인 것으로 핑크 문자
	IF TALENT:새디즘
		PRINTFORMD 심한 일.
		PRINTFORML 해 준다」
	;이쪽은 당신에게 있어서의 심한 일인 것으로 백문자
	ELSE
		PRINTFORML 심한 일. 해 준다」
	ENDIF
	;밤
	;인간으로 숫처녀인 레이무씨에 의한 힘껏의 나오지 않고. 빛을 꺼 주지 않는다. 물론 레이무씨 쪽이 부끄럽다.
	SIF TIME
		PRINTFORMDL %CALLNAME:TARGET%는 빛도 끄지 않고 행위를 개시했다…
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 러브러브
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(100) && IS_POLICY("오늘", "러브러브")
	PRINTFORML 「뭐야… 가끔 씩은 끈적끈적 달라붙고 싶어지는거야」
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 이상
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "이상")
	PRINTFORML 
	RETURN 1
ENDIF

;━━━━━━━━━━━━━━━━━━━━━━━━
;방침이 야외
;━━━━━━━━━━━━━━━━━━━━━━━━
IF 구상기입체크(0) && IS_POLICY("오늘", "야외")
	PRINTFORML 
	RETURN 1
ENDIF