;-------------------------------------------------
;함수명:EQUIP_CARESS
;개  요점:지속 애무 장비품 취득 함수
;인  수:ARGS… 애무 종별을 넣으면 일치를 본다. /단락으로 복수 지정 가능. 생략 할까 공문자열이라면 TEQUIP에 의한 애무를 모두 표시.
;			  클리캡·오나홀등 지속 애무를 가져오지 않기 때문에 포함하지 않는다.
;       ARG… 대상의 캐릭터(생략 하면 조교 대상. 현재 조교 대상만 서포트)
;반환값:일치를 보는 경우, 일치하지 않으면 공문자열. 일치했는지 생략 했을 경우, 애무에 관련되는 TEQUIP 모든 것을/단락으로 나란해질 수 있던 것
;비  고:식 나카노세키수
;-------------------------------------------------
@EQUIP_CARESS(ARGS, ARG = -2)
#FUNCTIONS
#LOCALSSIZE 1
ARG = ARG != -2 ? ARG # MASTER
VARSET LOCALS
SIF TEQUIP:바이브
	LOCALS += "바이브/"
SIF TEQUIP:애널바이브
	LOCALS += "애널 바이브/"
SIF TEQUIP:애널비즈
	LOCALS += "애널 비즈/"
SIF TEQUIP:관장기＋플러그
	LOCALS += "관장기＋플러그/"
SIF TEQUIP:니플캡
	LOCALS += "니플캡/"
SIF TEQUIP:삼각목마
	LOCALS += "삼각 목마/"
SIF GETBIT(TEQUIP:자위중, 0)
	LOCALS += "자위중/"
IF TEQUIP:조교자페니스밴드
	SIF RANGE(TEQUIP:성교중, 1, 5) && TEQUIP:성교중 != 3
		LOCALS += "페니반 V성교중/"
	SIF TEQUIP:성교중 == 3
		LOCALS += "페니반 승마위중/"
	SIF TEQUIP:성교중 == 6
		LOCALS += "페니반 A성교중/"
ELSE
	SIF RANGE(TEQUIP:성교중, 1, 5) && TEQUIP:성교중 != 3
		LOCALS += "V성교중/"
	SIF TEQUIP:성교중 == 3
		LOCALS += "승마위중/"
	SIF TEQUIP:성교중 == 6
		LOCALS += "A성교중/"
ENDIF
IF TEQUIP:페니스밴드
	SIF RANGE(TEQUIP:성교봉사중, 1, 5) && TEQUIP:성교봉사중 != 3
		LOCALS += "페니반 V성교 봉사중/"
	SIF TEQUIP:성교봉사중 == 3
		LOCALS += "페니반역강간중/"
	SIF TEQUIP:성교봉사중 == 6
		LOCALS += "페니반 A성교 봉사중/"
ELSE
	SIF RANGE(TEQUIP:성교봉사중, 1, 5) && TEQUIP:성교봉사중 != 3
		LOCALS += "V성교 봉사중/"
	SIF TEQUIP:성교봉사중 == 3
		LOCALS += "역강간중/"
	SIF TEQUIP:성교봉사중 == 6
		LOCALS += "A성교 봉사중/"
ENDIF
IF PENIS(MASTER)
	SIF TEQUIP:조교대상C사용 == 1
		LOCALS += "자위중/"
	SIF TEQUIP:조교대상C사용 == 2
		LOCALS += "페라중/"
ELSE
	SIF TEQUIP:조교대상C사용 == 1
		LOCALS += "애무중/"
	SIF TEQUIP:조교대상C사용 == 2
		LOCALS += "쿤닐링구스중/"
ENDIF

SIF LOCALS == ""
	RETURNF ""

LOCALS = SUBSTRINGU(LOCALS, 0, STRLENSU(LOCALS)-1)
RETURNF \@ ARGS == "" || STRFIND(@"/%LOCALS%/", @"/%ARGS%/") == -1 ? LOCALS # \@


;-------------------------------------------------
;함수명:EFFECT
;개  요점:약제 따위의 효과를 나타내는 함수
;인  수:ARG:0… 약제의 효과량(TEQUIP)
;       ARG:1…0이라면 약중 강, 1이라면 소중다를 돌려준다
;반환값:효과의 크기를 나타내는 문자
;       10이상은 강, 5이상은 안, 5 미만은 미만
;비  고:식 나카노세키수
;-------------------------------------------------
@EFFECT(ARG:0, ARG:1)
#FUNCTIONS
SELECTCASE ARG:0
	CASE IS > 9
		RETURNF @"\@ ARG:1 ? 다# 강\@"
	CASE IS > 4
		RETURNF "중"
	CASEELSE
		RETURNF @"\@ ARG:1 ? 소# 미만\@"
ENDSELECT


