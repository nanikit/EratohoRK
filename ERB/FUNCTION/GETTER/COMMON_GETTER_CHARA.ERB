;-------------------------------------------------
;함수명:AFFECTION
;개  요점:ARGS:0으로 MASTER와 ARG:0과의 호의, 호감도를 참조한다
;인  수:ARGS:0… 캐릭터 라인
;인  수:ARG :0… 캐릭터 번호. 생략 하면 TARGET
;-------------------------------------------------
@AFFECTION(ARGS:0, ARG:0 = -2)
#FUNCTION
ARG:0 = ARG:0 != -2 ? ARG:0 # TARGET
SELECTCASE ARGS:0
	CASE "INFINITE"
		RETURNF FAVOR(10000, 10000, ARG:0) ;호의·호감도 10000
	CASE "상사상애"
		RETURNF FAVOR(3000, 3000, ARG:0) ;호의·호감도 3000
	CASE "맹목적으로 사랑"
		RETURNF FAVOR(0, 3000, ARG:0) ;호감도 3000
	CASE "몹시 사랑함"
		RETURNF FAVOR(0, 2000, ARG:0) ;호감도 2000
	CASE "권애"
		RETURNF FAVOR(0, 1000, ARG:0) ;호감도 1000
	CASE "괴뢰"
		RETURNF FAVOR(2500, 0, ARG:0) ;호의 2500
	CASE "조교 완료"
		RETURNF FAVOR(2000, 0, ARG:0) ;호의 2000
	CASE "조교가 끝난 상태"
		RETURNF FAVOR(1000, 0, ARG:0) ;호의 1000
	CASE "눈을 뜸"
		RETURNF FAVOR(500, 0, ARG:0) ;호의 500
	CASE "공포"
		RETURNF !FAVOR(200, 0, ARG:0) && MARK:MASTER:트라우마 >= 3 ;호의 200 미만·트라우마 Lv3 이상
	CASE "순응"
		RETURNF FAVOR(100, 100, ARG:0) ;호의·호감도 100
	CASE "흥미"
		RETURNF FAVOR(0, 500, ARG:0) ;호감도 500
	CASE "반항"
		RETURNF !FAVOR(1, 0, ARG:0) && MARK:(ARG:0):반항각인 >= 1 ;호의 0 이하·반항각인 Lv1 이상
	CASE "폭군"
		RETURNF !FAVOR(-100, 0, ARG:0) && FAVOR(0, 1000, ARG:0) ;호의-100·호감도 1000
	CASE "혐오"
		RETURNF !FAVOR(-100, 0, ARG:0) ;호의-100
	CASE "불구대천"
		RETURNF !FAVOR(-500, 0, ARG:0) ;호의-500
	CASE "천적"
		RETURNF !FAVOR(-1000, 0, ARG:0) ;호의-1000
	CASEELSE
		CALLF PRINT_ERRORMESSAGE(@"@AFFECTION에 무효인 정의(%ARGS%)가 건네받았습니다")
		RETURNF -1
ENDSELECT

;--------------------------------------------------
;궁합 검색 함수@RELATION_QUERY
;	인수 0:대상의 캐릭터 번호（등록 번호는 아니다. 수중에 존재하고 있을 필요는 없다）
;	인수 1:검색 조건（0=지정하지 않는, 1=수중에 없는 캐릭터만 선택하는, 2=수중에 있는 캐릭터만 선택한다）
;대상 캐릭터와 전캐릭터와의 궁합을 검색해, 가장 궁합의 좋은 상대를 추출합니다
;--------------------------------------------------
;반환값 일람
;	RESULT:발견된 캐릭터와의 궁합（0=발견 불가, 1=대상에의 궁합 101～199, 2=대상에의 궁합 200이상）
;	RESULT:1:발견한 캐릭터의 캐릭터 번호（발견 불가의 경우=-1）
;	RESULT:2:발견한 캐릭터의 등록 번호（수중에 없는 경우=-1）
;	RESULTS:발견한 캐릭터의 통칭
;	RESULTS:1:발견한 캐릭터의 이름
;--------------------------------------------------
@RELATION_QUERY(ARG, ARG:1)
#DIM LCOUNT, 1
#LOCALSIZE 7
;검색 대상의 등록 번호를 추출
LOCAL = GETCHARA(ARG, 1)
LOCAL:6 = 0
IF LOCAL == -1
	ADDCHARA ARG
	LOCAL = CHARANUM - 1
	LOCAL:6 = 1
ENDIF
LOCAL:1 = -1
IF ARG:1 == 2
	;수중으로부터 검색
	FOR LCOUNT, 0, CHARANUM
		LOCAL:2 = LOCAL:1 < 0 ? 100 # RELATION:LOCAL:(LOCAL:1)
		LOCAL:3 = NO:LCOUNT < 0 || NO:LCOUNT >= VARSIZE("RELATION") ? 100 # RELATION:LOCAL:(NO:LCOUNT)
		SIF LOCAL:2 == 0
			LOCAL:2 = 100
		SIF LOCAL:3 == 0
			LOCAL:3 = 100
		;동치의 경우 랜덤으로 남긴다
		;뒤로 물러나는 편이 큰 경우 그것을 보존
		SIF (LOCAL:2 == LOCAL:3 && RAND:2 && LOCAL:1 >= 0) || LOCAL:2 < LOCAL:3
			LOCAL:1 = NO:LCOUNT
	NEXT
ELSE
	;전체로부터 검색
	;궁합을 총검색해 캐릭터 번호와 궁합치를 추출
	FOR LCOUNT, 0, VARSIZE("RELATION")
		;원래 CSV가 없으면 보는 필요없음
		SIF EXISTCSV(LCOUNT, 0)  == 0
			CONTINUE
		;캐릭터가 있든가 확인해, 있을까 개검색 조건=1이라면 다음에 난다
		SIF GETCHARA(LCOUNT, 1) != -1 && ARG:1 == 1
			CONTINUE
		LOCAL:2 = LOCAL:1 < 0 ? 100 # RELATION:LOCAL:(LOCAL:1)
		LOCAL:3 = RELATION:LOCAL:LCOUNT
		SIF LOCAL:2 == 0
			LOCAL:2 = 100
		SIF LOCAL:3 == 0
			LOCAL:3 = 100
		;동치의 경우 랜덤으로 남긴다
		;뒤로 물러나는 편이 큰 경우 그것을 보존
		SIF ((LOCAL:2 == LOCAL:3 && RAND:2 && LOCAL:1 >= 0) || LOCAL:2 < LOCAL:3) && LCOUNT < 149
			LOCAL:1 = LCOUNT
	NEXT
ENDIF
SIF LOCAL:6
	DELCHARA CHARANUM - 1

;이름과 등록 번호를 취득
RESULT:1 = LOCAL:1
IF LOCAL:1 >= 0
	RESULT:2 = GETCHARA(LOCAL:1, 1)
	IF RESULT:2 >= 0
		RESULTS = %CALLNAME:(RESULT:2)%
		RESULTS:1 = %NAME:(RESULT:2)%
	ELSE
		RESULTS = %CSVCALLNAME(LOCAL:1, 0)%
		RESULTS:1 = %CSVNAME(LOCAL:1, 0)%
	ENDIF
ENDIF
;수치에 응해 RETURN
SIF RELATION:LOCAL:(LOCAL:1) > 199
	RETURN 2
SIF RELATION:LOCAL:(LOCAL:1) > 100
	RETURN 1
RETURN 0
