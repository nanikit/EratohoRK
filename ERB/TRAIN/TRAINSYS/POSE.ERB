;-------------------------------------------------

;강제탈의가 발생하고 있으면 자세를 보정
IF TFLAG:강제탈의
	;전회의자세에 의해 보정
	SELECTCASE TCVAR:MASTER:자세
		;네발로 엎드림은 자유롭게 되돌린다
		CASE 3
			CALL SET_POSE(MASTER, "자유")
		;무릎서기는 앉게 한다
		CASE 10
			CALL SET_POSE(MASTER, "앉는다")
	ENDSELECT
		;외는 계속한다
ENDIF

;자주탈의가 발생하고 있으면 위치를 리셋트
IF TFLAG:자주탈의
	CALL SET_POSE(TARGET, "자유", "무효", "무효")
ENDIF

