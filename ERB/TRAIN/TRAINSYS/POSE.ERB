	CALL SET_POSE(MASTER, "앙향")
	CALL CONDITION_POSE("체력", MASTER, "앙향")
ENDIF

;조교 대상 자위중
IF GETBIT(TEQUIP:자위중, 0)
	CALL SET_USE(MASTER, "P", MASTER, "손")
