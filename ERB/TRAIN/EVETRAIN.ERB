			CALL HTMLPRINTL(@"%HTMLBUTTON(@"[ 7] - %CALLNAME%님을 임신하게 하고 싶다", "7", "성적봉사++")%")
		SIF SATISBONUS_ABLE(8)
			CALL HTMLPRINTL(@"%HTMLBUTTON("[ 8] - 쉬게 해", "8", "휴게에 의한 조교의 스킵")%")
