CALL ANA_CRI_VAR()

;-------------------------------------------------------------------------
;기준치
;-------------------------------------------------------------------------
@ACT_ACTM2_REFERENCE

;필요하지 않을지도라고 생각했으므로 시험삼아 무효화@이것 보고
[SKIPSTART]
CALL ADD_CRI_VAR("로터", 10)
CALL ADD_CRI_VAR("바이브", 12 - TEQUIP:바이브 * 3)
CALL ADD_CRI_VAR("애널바이브", 10 - TEQUIP:애널바이브 * 3)
CALL ADD_CRI_VAR("애널비즈", 10 + TEQUIP:애널비즈 * 2)
CALL ADD_CRI_VAR("Ｃ애무도구", 15 - TEQUIP:클리캡 * 5 - TEQUIP:오나홀 * 5)
CALL ADD_CRI_VAR("니플캡", 15 - TEQUIP:니플캡 * 5)
