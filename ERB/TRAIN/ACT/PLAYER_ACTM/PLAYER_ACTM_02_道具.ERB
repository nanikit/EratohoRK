[SKIPEND]

;-------------------------------------------------------------
;오늘의 방침
;오늘의 방침(0=언제나 대로/1=A개발/2=벌/3=하드/4=러브러브/5=이상/6=야외/7=이상/8=휴식)
;-------------------------------------------------------------
@ACT_ACTM2_POLYCY

;오늘의 방침이Ａ개발
IF TFLAG:오늘의방침 == 1
	CALL ADD_CRI_VAR("애널바이브", 10)
	CALL ADD_CRI_VAR("애널비즈", 10)
ENDIF

;-------------------------------------------------------------------------
;조교 방침(1=휴식/2=소프트/3=노멀/4=하드/5=이상)
;-------------------------------------------------------------------------
@ACT_ACTM2_MENU
SELECTCASE POLICY("지금")
	CASE "하드"
		CALL ADD_CRI_VAR("관장세트", 6)
	CASE "이상"
		CALL ADD_CRI_VAR("관장세트", 4)
ENDSELECT

;-------------------------------------------------------------------------
;조교자의 소질을 참조
;-------------------------------------------------------------------------
@ACT_ACTM2_TALENT_T

;조교자가 겁쟁이/기장
IF TALENT:겁쟁이
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # -3)
	CALL ADD_CRI_VAR("애널비즈", TEQUIP:애널비즈 ? 0 # -2)
	CALL ADD_CRI_VAR("관장세트", -5)
ELSEIF TALENT:기장
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # 3, TEQUIP:애널바이브 ? 0 # 2)
	CALL ADD_CRI_VAR("애널비즈", TEQUIP:애널비즈 ? 0 # 2, TEQUIP:애널바이브 ? 0 # 4)
	CALL ADD_CRI_VAR("관장세트", , 6)
ENDIF

;조교자가 억압/해방
IF TALENT:억압
	CALL ADD_CRI_VAR("바이브", TEQUIP:바이브 ? 0 # -3)
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # -5)
	CALL ADD_CRI_VAR("애널비즈", TEQUIP:애널비즈 ? 0 # -3)
	CALL ADD_CRI_VAR("관장세트", TEQUIP:관장기＋플러그 ? 0 # -5)
ELSEIF TALENT:해방
	CALL ADD_CRI_VAR("바이브", , TEQUIP:바이브 ? 0 # 4)
	CALL ADD_CRI_VAR("애널바이브", , TEQUIP:애널바이브 ? 0 # 7)
	CALL ADD_CRI_VAR("애널비즈", , TEQUIP:애널비즈 ? 0 # 4)
	CALL ADD_CRI_VAR("관장세트", , TEQUIP:관장기＋플러그 ? 0 # 7)
ENDIF

;조교자가 악취민감
SIF TALENT:악취민감
	CALL ADD_CRI_VAR("관장세트", -8)

;조교자가 상냥함
SIF TALENT:상냥함
	CALL ADD_CRI_VAR("관장세트", TEQUIP:관장기＋플러그 ? 0 # -5)

;조교자가 광기
SIF TALENT:광기
	CALL ADD_CRI_VAR("관장세트", , TEQUIP:관장기＋플러그 ? 0 # 8)

;-------------------------------------------------------------------------
;조교 대상의 소질을 참조
;-------------------------------------------------------------------------
@ACT_ACTM2_TALENT_M

;조교 대상이음핵／음경
IF TALENT:MASTER:음핵／음경
	CALL ADD_CRI_VAR("로터", 3, 3)
	CALL ADD_CRI_VAR("Ｃ애무도구", (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 4, (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 5)
ENDIF

;조교 대상이 음호
SIF TALENT:MASTER:음호
	CALL ADD_CRI_VAR("바이브", TEQUIP:바이브 ? 0 # 4, TEQUIP:바이브 ? 0 # 5)

;조교 대상이 음고
IF TALENT:MASTER:음고
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # 3, TEQUIP:애널바이브 ? 0 # 7)
	CALL ADD_CRI_VAR("애널비즈", 2, 2)
	CALL ADD_CRI_VAR("관장세트", , TEQUIP:관장기＋플러그 ? 0 # 14)
ENDIF

;조교 대상이 음유
IF TALENT:MASTER:음유
	CALL ADD_CRI_VAR("니플캡", TEQUIP:니플캡 ? 0 # 4, TEQUIP:니플캡 ? 0 # 5)
ENDIF

;조교 대상이Ｃ민감/둔감
IF TALENT:MASTER:Ｃ민감
	CALL ADD_CRI_VAR("로터", 3, 2)
	CALL ADD_CRI_VAR("Ｃ애무도구", (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 1, (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 6)
ELSEIF TALENT:MASTER:Ｃ둔감
	CALL ADD_CRI_VAR("로터", -3, -3)
	CALL ADD_CRI_VAR("Ｃ애무도구", (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # -1, (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 6)
ENDIF

;조교 대상이Ｖ민감/둔감
IF TALENT:MASTER:Ｖ민감
	CALL ADD_CRI_VAR("바이브", TEQUIP:바이브 ? 0 # 4, TEQUIP:바이브 ? 0 # 2)
	CALL ADD_CRI_VAR("페니스밴드", TEQUIP:페니스밴드 ? 0 # 3, TEQUIP:페니스밴드 ? 0 # 1)
ELSEIF TALENT:MASTER:Ｖ둔감
	CALL ADD_CRI_VAR("바이브", TEQUIP:바이브 ? 0 # -4, TEQUIP:바이브 ? 0 # -2)
	CALL ADD_CRI_VAR("페니스밴드", TEQUIP:페니스밴드 ? 0 # -3, TEQUIP:페니스밴드 ? 0 # -1)
ENDIF

;조교자가Ｖ민감/둔감
IF TALENT:TARGET:Ｖ민감
	CALL ADD_CRI_VAR("페니스밴드", TEQUIP:페니스밴드 ? 0 # 3, TEQUIP:페니스밴드 ? 0 # 1)
ELSEIF TALENT:TARGET:Ｖ둔감
	CALL ADD_CRI_VAR("페니스밴드", TEQUIP:페니스밴드 ? 0 # -3, TEQUIP:페니스밴드 ? 0 # -1)
ENDIF

;조교 대상이Ａ민감/둔감
IF TALENT:MASTER:Ａ민감
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # 3, TEQUIP:애널바이브 ? 0 # 2)
	CALL ADD_CRI_VAR("애널비즈", 2, 4)
ELSEIF TALENT:MASTER:Ａ둔감
	CALL ADD_CRI_VAR("애널바이브", TEQUIP:애널바이브 ? 0 # -3, TEQUIP:애널바이브 ? 0 # -2)
	CALL ADD_CRI_VAR("애널비즈", -2, -4)
ENDIF

;조교 대상이Ｂ민감/둔감
IF TALENT:MASTER:Ｂ민감
	CALL ADD_CRI_VAR("니플캡", TEQUIP:니플캡 ? 0 # 3, TEQUIP:니플캡 ? 0 # 3)
ELSEIF TALENT:MASTER:Ｂ둔감
	CALL ADD_CRI_VAR("니플캡", TEQUIP:니플캡 ? 0 # -3, TEQUIP:니플캡 ? 0 # -3)
ENDIF

;조교 대상이 후타나리
SIF TALENT:MASTER:후타나리
	CALL ADD_CRI_VAR("Ｃ애무도구", (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # TALENT:호기심 * 3 - TALENT:무관심, (TEQUIP:클리캡 || TEQUIP:오나홀) ? 0 # 2)

;-----------------------------------------
;조교 대상이 처녀
;-----------------------------------------
@ACT_ACTM2_MAIDEN_M

IF TALENT:MASTER:처녀
	CALL ADD_CRI_VAR("바이브", CFLAG:합의 ? -5 # -10, CFLAG:합의 ? 5 # 0)
	CALL ADD_CRI_VAR("페니스밴드", CFLAG:합의 ? -5 # -10, CFLAG:합의 ? 5 # 0)
ENDIF

;-------------------------------------------------------------------------
;조교자의 능력을 참조
;-------------------------------------------------------------------------
@ACT_ACTM2_ABL_T

;조교자의 가학이[0→0, 5→5]를 가산(0～5)
CALL ADD_CRI_VAR("관장세트", LINE_CALC(ABL:가학, "0→0, 5→5, LIMIT/0～5"))

;-------------------------------------------------------------------------
;조교 대상의 능력을 참조
;-------------------------------------------------------------------------
@ACT_ACTM2_ABL_M

;조교 대상의Ｃ감각이[0→0～1, 4→0～9]를 가산(0～9)
CALL ADD_CRI_VAR("로터", , LINE_CALC(ABL:MASTER:Ｃ감각, "0→1, 4→9, LIMIT/0～9"))
;조교 대상의Ｃ감각이[0→1, 5→6]을 가산(1～6)(클리캡, 오나홀 모두 비착용시)
SIF !TEQUIP:클리캡 && !TEQUIP:오나홀
	CALL ADD_CRI_VAR("Ｃ애무도구", LINE_CALC(ABL:MASTER:Ｃ감각, "0→1, 5→6, LIMIT/1～6"))

;조교 대상의Ｖ감각이[0→0, 1→1～2, 5→3～8]을 가산(0～8)(바이브비착용시)
IF !TEQUIP:바이브
	CALL ADD_CRI_VAR("바이브", LINE_CALC(ABL:MASTER:Ｖ감각, "1→1, 5→3, LIMIT/0～3"), LINE_CALC(ABL:MASTER:Ｖ감각, "0→0, 5→5, LIMIT/0～5"))
	CALL ADD_CRI_VAR("페니스밴드", LINE_CALC(ABL:MASTER:Ｖ감각, "1→1, 5→3, LIMIT/0～3"), LINE_CALC(ABL:MASTER:Ｖ감각, "0→0, 5→5, LIMIT/0～5"))
ENDIF

;조교 대상의Ａ감각이[0→0, 1→1～2, 5→3～8]을 가산(0～8)
CALL ADD_CRI_VAR("애널비즈", LINE_CALC(ABL:MASTER:Ａ감각, "1→1, 5→3, LIMIT/0～3"), LINE_CALC(ABL:MASTER:Ａ감각, "0→0, 5→5, LIMIT/0～5"))
;조교 대상의Ａ감각이[0→0, 1→1～2, 5→3～8]을 가산(0～8)(A바이브비착용시)
SIF !TEQUIP:애널바이브
	CALL ADD_CRI_VAR("애널바이브", LINE_CALC(ABL:MASTER:Ａ감각, "1→1, 5→3, LIMIT/0～3"), LINE_CALC(ABL:MASTER:Ａ감각, "0→0, 5→5, LIMIT/0～5"))

;조교 대상의Ｂ감각이[0→0, 1→1～2, 5→3～8]을 가산(0～8)(B캡비착용시)
SIF !TEQUIP:니플캡
	CALL ADD_CRI_VAR("니플캡", LINE_CALC(ABL:MASTER:Ｂ감각, "1→1, 5→3, LIMIT/0～3"), LINE_CALC(ABL:MASTER:Ｂ감각, "0→0, 5→5, LIMIT/0～5"))

;-------------------------------------------------------------------------
;PALAM군
;여기는 개별적으로
;-------------------------------------------------------------------------
;------------------------------------------
;윤활
;------------------------------------------
@ACT_ACTM2_MOIST_M

;조교자에게 약학지식이 없는 경우, 윤활의 체크
IF !TALENT:약학지식
	;조교 대상의 윤활이[0→-5, 100→-3, 250→-1, 500→0]을 가산(-5～0)
	CALL ADD_CRI_VAR("바이브", LINE_CALC(PALAM:MASTER:윤활, "0→-5, 100→-3, 250→-1, 5→0, LIMIT/-5～0"))
	CALL ADD_CRI_VAR("페니스밴드", LINE_CALC(PALAM:MASTER:윤활, "0→-5, 100→-3, 250→-1, 5→0, LIMIT/-5～0"))
	CALL ADD_CRI_VAR("애널바이브", LINE_CALC(PALAM:MASTER:윤활, "0→-5, 100→-3, 250→-1, 5→0, LIMIT/-5～0"))
	;조교 대상의 윤활이[0→-5, 100→-1, 250→0]을 가산(-5～0)
	CALL ADD_CRI_VAR("애널비즈", LINE_CALC(PALAM:MASTER:윤활, "0→-5, 100→-1, 250→0, LIMIT/-5～0"))
ENDIF

;-------------------------------------
;조교자의 죄악감
;-------------------------------------
@ACT_ACTM2_SIN_T

;죄악감이[80→0, 100→-1]을 가산(-1～0)
CALL ADD_CRI_VAR("애널비즈", LINE_CALC(CFLAG:죄악감, "80→0, 100→-1, LIMIT/-1～0"))
;죄악감이[60→0, 80→-1, 100→-2]를 가산(-2～0)
CALL ADD_CRI_VAR("애널바이브", LINE_CALC(CFLAG:죄악감, "60→0, 100→-2, LIMIT/-2～0"))
;죄악감이[0→0, 20→-1, 100→-5]를 가산(-5～0)
CALL ADD_CRI_VAR("관장세트", LINE_CALC(CFLAG:죄악감, "0→0, 100→-5, LIMIT/-5～0"))

;-------------------------------------
;조교자의 ALI
;-------------------------------------
@ACT_ACTM2_ALI_T

;아라이먼트가[-50→-3, 50→3]을 가산(-3～3)
CALL ADD_CRI_VAR("로터", LINE_CALC(CFLAG:아라이먼트, "-50→-3, 50→3, LIMIT/-3～3"))
;아라이먼트가[-50→3, 50→-3]을 가산(-3～3)
CALL ADD_CRI_VAR("관장세트", LINE_CALC(CFLAG:아라이먼트, "-50→3, 50→-3, LIMIT/-3～3"))

;────────────────────────────────────
;게이지나 상태에 의한 변동
;────────────────────────────────────
;-------------------------------------
;조교 대상의 체력
;-------------------------------------
@ACT_ACTM2_PHYSICAL_M

;조교 대상의 체력이[0→-3, 50→-1, 250→0]을 가산(-3～0)
CALL ADD_CRI_VAR("로터", LINE_CALC(BASE:MASTER:체력, "0→3, 50→1, 250→0, LIMIT/0～3"))
;※지속해 꾸짖는 도구를 멈춘다
;조교 대상의 체력이[0→+-5, 50→+-3, 250→+-1, 500→0]을 가산(-5～5)
LOCAL = TEQUIP:바이브 ? 1 # -1
CALL ADD_CRI_VAR("바이브", LOCAL * LINE_CALC(BASE:MASTER:체력, "0→5, 50→3, 250→1, 500→0, LIMIT/0～5"))
LOCAL = TEQUIP:페니스밴드 ? 1 # -1
CALL ADD_CRI_VAR("페니스밴드", LOCAL * LINE_CALC(BASE:MASTER:체력, "0→5, 50→3, 250→1, 500→0, LIMIT/0～5"))
LOCAL = TEQUIP:애널바이브 ? 1 # -1
CALL ADD_CRI_VAR("애널바이브", LOCAL * LINE_CALC(BASE:MASTER:체력, "0→5, 50→3, 250→1, 500→0, LIMIT/0～5"))
;조교 대상의 체력이[0→-4/8, 50→-2/4, 250→0]을 가산(-4～8)
