;리액션 후의 탈의 애니메이션 표시
;─
@TRAIN_MESSAGE2_5_ANIME
;의상 변경이 아닌 경우는 돌아온다
SIF !IS_NOWACTNAME("의상의변경을요구한다") || !IS_COMGRONAME("소극적 따른다/태연하게 따른다/적극적 따른다")
	RETURN RESULT
PRINTL
;옷을 벗었을 경우
IF TFLAG:ACT파생 == 0 && IS_COMGRONAME("소극적 따른다/태연하게 따른다/적극적 따른다")
	;조교 대상 복장의 표시
	CALL CLOTHE_SHOW(MASTER)
;옷을 입었을 경우
ELSEIF  TFLAG:ACT파생 && IS_COMGRONAME("소극적 따른다/태연하게 따른다/적극적 따른다")
	;조교 대상 복장의 표시
	CALL CLOTHE_SHOW(MASTER, 1)
ENDIF
RETURN RESULT

