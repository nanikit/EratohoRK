;-------------------------------------------
;조교자의 ABL 보정
;ARG가 생략 되었을 경우는 TARGET를 참조한다
;라고 할까 특히 구애됨이 없으면 TARGET 이외를 보는 일은 없다고 생각합니다만 일단
;-------------------------------------------
@ACT_COURCE_ABL_T, ARG = -1
#LOCALSIZE 1

LOCAL = ARG == -1 ? TARGET # ARG
;욕망
CALL ADD_CRI_VAR("휴게", -ABL:LOCAL:욕망)

;봉사정신
CALL ADD_CRI_VAR("소프트"  , LINE_CALC(ABL:LOCAL:봉사정신, "0→0, 5→2, LIMIT/0～2"))
CALL ADD_CRI_VAR("노멀", LINE_CALC(ABL:LOCAL:봉사정신, "0→0, 5→4, LIMIT/0～4"))

;가학
CALL ADD_CRI_VAR("노멀", LINE_CALC(ABL:LOCAL:가학, "0→0, 5→-2, LIMIT/-2～0"))
CALL ADD_CRI_VAR("하드"  , LINE_CALC(ABL:LOCAL:가학, "0→0, 5→4, LIMIT/0～4"))

;이상
CALL ADD_CRI_VAR("하드", LINE_CALC(ABL:LOCAL:이상, "0→0, 5→2, LIMIT/0～2"))
CALL ADD_CRI_VAR("이상"  , LINE_CALC(ABL:LOCAL:이상, "0→0, 5→4, LIMIT/0～4"))

;-------------------------------------------
;조교 대상의 ABL 보정
;ARG가 생략 되었을 경우는 MASTER를 참조한다
;라고 할까 특히 구애됨이 없으면 MASTER 이외를 보는 일은 없다고 생각합니다만 일단
;-------------------------------------------
@ACT_COURCE_ABL_M, ARG = -1
#LOCALSIZE 1

LOCAL = ARG == -1 ? TARGET # MASTER
;조교 Lv(ABL와 닮은 것 같은 것이고 여기서 처리)
CALL ADD_CRI_VAR("소프트"  , LINE_CALC(CFLAG:LOCAL:조교레벨, "0→2, 9→-1, LIMIT/-1～2"))
CALL ADD_CRI_VAR("노멀", LINE_CALC(CFLAG:LOCAL:조교레벨, "0→1, 9→-1, LIMIT/-1～1"))
CALL ADD_CRI_VAR("하드"  , LINE_CALC(CFLAG:LOCAL:조교레벨, "0→-2, 9→2, LIMIT/-2～2"))

;-------------------------------------------
;조교자의 ALI 보정
;ARG가 생략 되었을 경우는 TARGET를 참조한다
;라고 할까 특히 구애됨이 없으면 TARGET 이외를 보는 일은 없다고 생각합니다만 일단
;-------------------------------------------
@ACT_COURCE_ALI, ARG = -1
#LOCALSIZE 1

LOCAL = ARG == -1 ? TARGET # ARG
CALL ADD_CRI_VAR("소프트"  , LINE_CALC(CFLAG:LOCAL:아라이먼트, "-50→-5, 0→0, 50→5, LIMIT/-5～5"))
CALL ADD_CRI_VAR("노멀", LINE_CALC(CFLAG:LOCAL:아라이먼트, "-50→0, 0→3, 50→0, LIMIT/0～3"))
CALL ADD_CRI_VAR("하드"  , LINE_CALC(CFLAG:LOCAL:아라이먼트, "-50→6, 0→0, 50→-3, LIMIT/-3～6"))
CALL ADD_CRI_VAR("이상",  0, LINE_CALC(CFLAG:LOCAL:아라이먼트, "-50→9, 0→0, 50→-5, LIMIT/-5～9"))

;-------------------------------------------
;조교자의 죄악감 보정
;ARG가 생략 되었을 경우는 TARGET를 참조한다
;라고 할까 특히 구애됨이 없으면 TARGET 이외를 보는 일은 없다고 생각합니다만 일단
;-------------------------------------------
@ACT_COURCE_SIN, ARG = -1
#LOCALSIZE 1

LOCAL = ARG == -1 ? TARGET # ARG
CALL ADD_CRI_VAR("하드", LINE_CALC(CFLAG:LOCAL:죄악감, "0→0, 100→-5, LIMIT/-5～0"))
CALL ADD_CRI_VAR("이상"  , LINE_CALC(CFLAG:LOCAL:죄악감, "0→0, 100→-3, LIMIT/-3～0"), LINE_CALC(CFLAG:LOCAL:죄악감, "0→0, 100→-5, LIMIT/-5～0"))

;-------------------------------------------
;조교자 상태 보정
;ARG가 생략 되었을 경우는 TARGET를 참조한다
;라고 할까 특히 구애됨이 없으면 TARGET 이외를 보는 일은 없다고 생각합니다만 일단
;
;;조교자 상태(0=통상/1=피폐/2=쇠약/3=무기력/4=몽롱/5=정욕/6=분노/7=싫증/8=울적)
;-------------------------------------------
@ACT_COURCE_CONDITION_T, ARG = -1
#LOCALSIZE 1

LOCAL = ARG == -1 ? TARGET # ARG
SELECTCASE GET_CONDITION(LOCAL)
	CASE "피폐", "쇠약"
		;TCVAR:상태변화는 1때 피폐, 2때 쇠약, 즉, 피폐는+2, 쇠약은+4
		;TFLAG:조교자소모도는 조교자의 소모 플래그
		CALL ADD_CRI_VAR("휴게"    ,  TFLAG:조교자소모도 + 5 + TCVAR:상태변화 * 2)
		CALL ADD_CRI_VAR("소프트"  , -TFLAG:조교자소모도)
		CALL ADD_CRI_VAR("노멀", -TFLAG:조교자소모도)
		CALL ADD_CRI_VAR("하드"  , -TFLAG:조교자소모도)
		CALL ADD_CRI_VAR("이상"    , -TFLAG:조교자소모도)
		CALL ADD_CRI_VAR("소프트"  , -TFLAG:조교자소모도)
	CASE "무기력"
		CALL ADD_CRI_VAR("소프트"  , -1)
		CALL ADD_CRI_VAR("노멀", -1)
		CALL ADD_CRI_VAR("하드"  , -2)
		CALL ADD_CRI_VAR("이상"    , -2)
	CASE "몽롱"
		CALL ADD_CRI_VAR("휴게"    ,  6)
		CALL ADD_CRI_VAR("소프트"  ,  0, 10)
		CALL ADD_CRI_VAR("노멀",  0, 10)
		CALL ADD_CRI_VAR("하드"  ,  0, 10)
		CALL ADD_CRI_VAR("이상"    ,  0, 10)
	CASE "정욕"
		CALL ADD_CRI_VAR("소프트"  ,  4)
		CALL ADD_CRI_VAR("노멀",  4)
	CASE "분노"
		CALL ADD_CRI_VAR("휴게"    , -3)
		CALL ADD_CRI_VAR("소프트"  , -4)
		CALL ADD_CRI_VAR("노멀", -2)
		CALL ADD_CRI_VAR("하드"  ,  4)
		CALL ADD_CRI_VAR("이상"    ,  2)
	CASE "지루함"
		CALL ADD_CRI_VAR("휴게"    ,  4)
		CALL ADD_CRI_VAR("소프트"  , -3)
		CALL ADD_CRI_VAR("노멀", -3)
		CALL ADD_CRI_VAR("하드"  , -3)
		CALL ADD_CRI_VAR("이상"    ,  3)
