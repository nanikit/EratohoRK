CALLFORM %LOCALS%_PLAYNOW

;SANDBOX 한정 처리
CALL CHA_CRI_VAR, "잠정 처리"
;SANDBOX 한정 처리
SIF FLAG:모드 == 1
	CALL ADD_CRI_VAR("휴게", -99)

;─
;최종 판정, 갈라 놓을 때의 우선순서는 노멀 3＞소프트 2＞하드 4＞이상 5＞휴게 1
;─
SPLIT 방침종, "/", LOCALS
CALL DEF_CRI_VAR("최대 우선 지정-노멀/소프트/하드/이상/휴게")
LOCAL = GET_CRI_VAR("결정")
IF LOCAL == -1
	PRINTW 조교 방침 카운터가 이상합니다
	TFLAG:턴방침 = 3
ELSE
	TFLAG:턴방침 = FINDELEMENT(LOCALS, RESULTS, , , 1) + 1
ENDIF
CALL ANA_CRI_VAR()

;-------------------------------------------
;오늘의 방침
;0=언제나 대로/1=A개발/2=벌/3=하드/4=러브러브/5=이상/6=야외/7=이상/8=휴게
;TFLAG:오늘의방침로 관리되고 있다
;여기서 영향을 주는 것은 4 방침만인 것으로 주의
;-------------------------------------------
@ACT_COURCE_OF_TODAY
;오늘의방침
SELECTCASE POLICY("오늘")
	CASE "애널"
		CALL ADD_CRI_VAR("소프트"  , -5)
	CASE "하드"
		CALL ADD_CRI_VAR("소프트"  , -5)
		CALL ADD_CRI_VAR("노멀", -2)
		CALL ADD_CRI_VAR("하드"  ,  5)
		CALL ADD_CRI_VAR("이상"    ,  5)
	CASE "러브러브"
		CALL ADD_CRI_VAR("소프트"  , 10)
	CASE "이상"
		CALL ADD_CRI_VAR("하드"  ,  0, 20)
		CALL ADD_CRI_VAR("이상"    ,  0, 20)
ENDSELECT

