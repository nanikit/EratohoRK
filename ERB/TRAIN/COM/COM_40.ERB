;─
;040, 거부한다(반항, 벌포인트)
;─
@COM40
;반항 SOURCE 증가
IF CFLAG:MASTER:조교레벨 < 10
	SOURCE:MASTER:반항 += 250 + MARK:굴복각인 * (10 - CFLAG:MASTER:조교레벨) * 20
ELSE
	SOURCE:MASTER:반항 += 200
ENDIF
;벌포인트 가산
TFLAG:벌포인트 += BASE:초조 / 100 + MARK:반항각인 + 1
;COM 분류
CALL SET_COMGRO("거부")
;COM 인상
CALL SET_COMIMP("약간나쁜인상")
;의존도 변화
CALL ADD_DEPEND(-2, -4)
RETURN 1


;─
;041, 소극적한다(굴종, 소극적 따르는, 벌포인트)
;─
@COM41
;굴종 SOURCE 증가
SOURCE:MASTER:굴종 += 100 + CFLAG:MASTER:조교레벨 * (50 + GET_ABL(MASTER, "순종")) * (50 + GET_ABL(MASTER, "봉사정신") * 2) * MARK:굴복각인 / 100
;소극 판정
LOCAL = (BASE:초조 / 150 + BASE:흥미 / 150 - CFLAG:아라이먼트 / 10) * (11 - MARK:굴복각인) / 10 + RAND:3
IF LOCAL > 0
	;벌포인트 가산
	TFLAG:벌포인트 += LOCAL
	;파생:소극적인의가 마음에 들지 않는다
	TFLAG:REACT파생 = 1
	;COM 인상
	CALL SET_COMIMP("나쁜인상")
	;의존도 변화
	CALL ADD_DEPEND(-5, 0)
ELSE
	;파생:소극적이지만 좋은가
	TFLAG:REACT파생 = 0
	;COM 인상
	CALL SET_COMIMP("약간좋은인상")
	;의존도 변화
	CALL ADD_DEPEND(-3, +2)
ENDIF
;COM 분류
CALL SET_COMGRO("소극적 따른다")
RETURN 1


;─
;042, 적극적한다(달성, 적극적 따른다)
;─
@COM42
;달성 SOURCE 증가
SOURCE:MASTER:달성 += (CFLAG:MASTER:조교레벨 + 5) * (GET_ABL(MASTER, "봉사정신") + 50) + (GET_ABL(MASTER, "기교") + 50) * 20 / 100
;COM 분류
CALL SET_COMGRO("적극적 따른다")
;COM 인상
CALL SET_COMIMP("좋은인상")
;인내 플래그 해소
TCVAR:MASTER:인내 = 0
;의존도 변화
CALL ADD_DEPEND(+4, +2)
RETURN 1


;─
;043, 애정을담아준다(달성, 열락, 적극적 따른다)
;─
@COM43
;달성, 열락 SOURCE 증가
SOURCE:MASTER:달성 += (CFLAG:M호의 + 500) * (GET_ABL(MASTER, "봉사정신") + 10) * (GET_ABL(MASTER, "기교") + 10) / 10000
SOURCE:MASTER:열락 += (CFLAG:M호의 + 100) * (GET_TRAINLV(TARGET) + 10) / 50
;COM 분류
CALL SET_COMGRO("적극적 따른다")
;COM 인상
CALL SET_COMIMP("좋은인상")
;인내 플래그 해소
TCVAR:MASTER:인내 = 0
;의존도 변화
CALL ADD_DEPEND(+6, +10)
RETURN 1


;─
;044, 태연하게한다(달성, 태연하게 따른다)
;─
@COM44
;달성 SOURCE 증가
SOURCE:MASTER:달성 += (CFLAG:MASTER:조교레벨 + 5) * (GET_ABL(MASTER, "봉사정신") + 50) + (GET_ABL(MASTER, "기교") + 50) * 20 / 120
;COM 분류
CALL SET_COMGRO("태연하게 따른다")
;COM 인상
CALL SET_COMIMP("약간좋은인상")
;인내 플래그 해소
TCVAR:MASTER:인내 = 0
;의존도 변화
CALL ADD_DEPEND(+2, -2)
RETURN 1
